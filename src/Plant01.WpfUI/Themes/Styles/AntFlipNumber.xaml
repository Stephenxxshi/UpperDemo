<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Plant01.WpfUI.Controls"
                    xmlns:themes="clr-namespace:Plant01.WpfUI.Themes">

    <Style TargetType="{x:Type controls:AntFlipNumber}">
        <Setter Property="Width" Value="120"/>
        <Setter Property="Height" Value="180"/>
        <Setter Property="Background" Value="{DynamicResource {x:Static themes:DesignTokenKeys.PrimaryColor}}"/>
        <Setter Property="Foreground" Value="{DynamicResource {x:Static themes:DesignTokenKeys.TextOnPrimary}}"/>
        <Setter Property="FontSize" Value="70"/>
        <Setter Property="Camera">
            <Setter.Value>
                <PerspectiveCamera Position="0 0 120" LookDirection="0 0 -1" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type controls:AntFlipClock}">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="FontSize" Value="70"/>
        <Setter Property="Foreground" Value="{DynamicResource {x:Static themes:DesignTokenKeys.TextOnPrimary}}"/>
        <Setter Property="Background" Value="{DynamicResource {x:Static themes:DesignTokenKeys.PrimaryColor}}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AntFlipClock}">
                    <StackPanel Orientation="Horizontal">
                        <controls:AntFlipNumber x:Name="PART_HourLeft" Margin="-20"
                                                FontSize="{TemplateBinding FontSize}"
                                                FontWeight="{TemplateBinding FontWeight}"
                                                FontFamily="{TemplateBinding FontFamily}"
                                                FontStyle="{TemplateBinding FontStyle}"
                                                Foreground="{TemplateBinding Foreground}"
                                                Background="{TemplateBinding Background}"/>
                        <controls:AntFlipNumber x:Name="PART_HourRight" Margin="-20"
                                                FontSize="{TemplateBinding FontSize}"
                                                FontWeight="{TemplateBinding FontWeight}"
                                                FontFamily="{TemplateBinding FontFamily}"
                                                FontStyle="{TemplateBinding FontStyle}"
                                                Foreground="{TemplateBinding Foreground}"
                                                Background="{TemplateBinding Background}"/>
                        
                        <controls:AntFlipNumber x:Name="PART_MinuteLeft" Margin="0,-20,-20,-20"
                                                FontSize="{TemplateBinding FontSize}"
                                                FontWeight="{TemplateBinding FontWeight}"
                                                FontFamily="{TemplateBinding FontFamily}"
                                                FontStyle="{TemplateBinding FontStyle}"
                                                Foreground="{TemplateBinding Foreground}"
                                                Background="{TemplateBinding Background}"/>
                        <controls:AntFlipNumber x:Name="PART_MinuteRight" Margin="-20"
                                                FontSize="{TemplateBinding FontSize}"
                                                FontWeight="{TemplateBinding FontWeight}"
                                                FontFamily="{TemplateBinding FontFamily}"
                                                FontStyle="{TemplateBinding FontStyle}"
                                                Foreground="{TemplateBinding Foreground}"
                                                Background="{TemplateBinding Background}"/>
                        
                        <controls:AntFlipNumber x:Name="PART_SecondLeft" Margin="0,-20,-20,-20"
                                                FontSize="{TemplateBinding FontSize}"
                                                FontWeight="{TemplateBinding FontWeight}"
                                                FontFamily="{TemplateBinding FontFamily}"
                                                FontStyle="{TemplateBinding FontStyle}"
                                                Foreground="{TemplateBinding Foreground}"
                                                Background="{TemplateBinding Background}"/>
                        <controls:AntFlipNumber x:Name="PART_SecondRight" Margin="-20"
                                                FontSize="{TemplateBinding FontSize}"
                                                FontWeight="{TemplateBinding FontWeight}"
                                                FontFamily="{TemplateBinding FontFamily}"
                                                FontStyle="{TemplateBinding FontStyle}"
                                                Foreground="{TemplateBinding Foreground}"
                                                Background="{TemplateBinding Background}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
