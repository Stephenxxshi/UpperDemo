<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Plant01.WpfUI.Controls"
                    xmlns:local="clr-namespace:Plant01.WpfUI.Themes"
                    xmlns:converters="clr-namespace:Plant01.WpfUI.Converters">

    <Style TargetType="{x:Type controls:AntDivider}">
        <Setter Property="Foreground" Value="{DynamicResource {x:Static local:DesignTokenKeys.TextPrimary}}" />
        <Setter Property="BorderBrush" Value="{DynamicResource {x:Static local:DesignTokenKeys.BorderColorSplit}}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AntDivider}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- Horizontal Line -->
                        <Border x:Name="Line"
                                Grid.ColumnSpan="3"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0,1,0,0"
                                VerticalAlignment="Center"
                                Height="1"/>
                                
                        <!-- Text -->
                        <TextBlock x:Name="Text"
                                   Grid.Column="1"
                                   Text="{TemplateBinding Text}"
                                   Foreground="{TemplateBinding Foreground}"
                                   Margin="16,0"
                                   Visibility="{TemplateBinding Text, Converter={x:Static converters:StringVisibilityConverter.Instance}}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter TargetName="Line" Property="BorderThickness" Value="1,0,0,0"/>
                            <Setter TargetName="Line" Property="Width" Value="1"/>
                            <Setter TargetName="Line" Property="Height" Value="Auto"/>
                            <Setter TargetName="Line" Property="HorizontalAlignment" Value="Center"/>
                            <Setter TargetName="Line" Property="VerticalAlignment" Value="Stretch"/>
                            <Setter Property="Width" Value="Auto"/>
                            <Setter Property="Height" Value="Auto"/>
                            <Setter Property="MinHeight" Value="10"/>
                            <Setter Property="Margin" Value="8,0"/>
                            <Setter TargetName="Text" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="TextAlignment" Value="Left">
                            <Setter TargetName="Text" Property="Grid.Column" Value="0"/>
                            <Setter TargetName="Text" Property="HorizontalAlignment" Value="Left"/>
                            <Setter TargetName="Text" Property="Margin" Value="24,0,0,0"/>
                        </Trigger>
                        <Trigger Property="TextAlignment" Value="Right">
                            <Setter TargetName="Text" Property="Grid.Column" Value="2"/>
                            <Setter TargetName="Text" Property="HorizontalAlignment" Value="Right"/>
                            <Setter TargetName="Text" Property="Margin" Value="0,0,24,0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
