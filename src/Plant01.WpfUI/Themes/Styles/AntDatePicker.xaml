<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Plant01.WpfUI.Controls"
                    xmlns:themes="clr-namespace:Plant01.WpfUI.Themes">

    <!-- ================================================================= -->
    <!-- DatePickerTextBox Style (The input part)                          -->
    <!-- ================================================================= -->
    <Style x:Key="AntDatePickerTextBoxStyle" TargetType="{x:Type DatePickerTextBox}">
        <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type controls:AntDatePicker}}}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DatePickerTextBox}">
                    <Grid Background="Transparent">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Focusable="False"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"
                                      Padding="{TemplateBinding Padding}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        <TextBlock x:Name="Watermark"
                                   Text="{Binding Path=(controls:AntDatePicker.Placeholder), RelativeSource={RelativeSource AncestorType={x:Type controls:AntDatePicker}}}"
                                   Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.PlaceholderColor}}"
                                   VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                   Margin="{TemplateBinding Padding}"
                                   IsHitTestVisible="False"
                                   Visibility="Collapsed"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ================================================================= -->
    <!-- DatePicker Style (The main container)                             -->
    <!-- ================================================================= -->
    <Style TargetType="{x:Type controls:AntDatePicker}">
        <Setter Property="Background" Value="{DynamicResource {x:Static themes:DesignTokenKeys.ComponentBackground}}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColor}}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
        <Setter Property="Height" Value="{DynamicResource {x:Static themes:DesignTokenKeys.ControlHeight}}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="{DynamicResource {x:Static themes:DesignTokenKeys.PaddingMD}}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource {x:Static themes:DesignTokenKeys.BorderRadius}}"/>
        <Setter Property="CalendarStyle" Value="{DynamicResource AntCalendarStyle}"/>
        <Setter Property="IsTodayHighlighted" Value="True"/>
        <Setter Property="SelectedDateFormat" Value="Short"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AntDatePicker}">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Input Area -->
                            <DatePickerTextBox x:Name="PART_TextBox"
                                               Grid.Column="0"
                                               Style="{StaticResource AntDatePickerTextBoxStyle}"
                                               HorizontalContentAlignment="Stretch"
                                               VerticalContentAlignment="Center"
                                               Padding="{TemplateBinding Padding}"
                                               Focusable="{TemplateBinding Focusable}"/>

                            <!-- Icons Area -->
                            <Grid Grid.Column="1" Margin="0,0,8,0">
                                <!-- Calendar Icon (Default) -->
                                <Button x:Name="PART_Button"
                                        Focusable="False"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Cursor="Hand"
                                        Width="20"
                                        Height="20">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid Background="Transparent">
                                                <Path Data="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z" 
                                                      Fill="{DynamicResource {x:Static themes:DesignTokenKeys.TextQuaternary}}"
                                                      Stretch="Uniform"
                                                      Width="14"
                                                      Height="14"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- Clear Icon (Hover & HasValue) -->
                                <Button x:Name="PART_ClearButton"
                                        Focusable="False"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Cursor="Hand"
                                        Width="20"
                                        Height="20"
                                        Visibility="Collapsed">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid Background="Transparent">
                                                <!-- Circle Background -->
                                                <Ellipse x:Name="CircleBg"
                                                         Fill="{DynamicResource {x:Static themes:DesignTokenKeys.TextQuaternary}}" 
                                                         Width="14" Height="14" 
                                                         Opacity="0.5"/>
                                                <!-- X Icon -->
                                                <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                                                      Fill="{DynamicResource {x:Static themes:DesignTokenKeys.ComponentBackground}}"
                                                      Stretch="Uniform"
                                                      Width="8"
                                                      Height="8"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="CircleBg" Property="Opacity" Value="0.8"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>

                            <Popup x:Name="PART_Popup"
                                   AllowsTransparency="True"
                                   Placement="Bottom"
                                   PlacementTarget="{Binding ElementName=Border}"
                                   StaysOpen="False">
                                <Calendar x:Name="PART_Calendar"
                                          Style="{TemplateBinding CalendarStyle}"
                                          IsTodayHighlighted="{TemplateBinding IsTodayHighlighted}"/>
                            </Popup>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource {x:Static themes:DesignTokenKeys.PrimaryColorHover}}"/>
                            <!-- Show Clear Button if Hovered -->
                            <Setter TargetName="PART_ClearButton" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="PART_Button" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        
                        <!-- If Text is Empty, Hide Clear Button (Override Hover) -->
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="PART_ClearButton" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="PART_Button" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource {x:Static themes:DesignTokenKeys.PrimaryColor}}"/>
                            <Setter TargetName="Border" Property="Effect" Value="{DynamicResource {x:Static themes:DesignTokenKeys.BoxShadow}}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource {x:Static themes:DesignTokenKeys.FillColor}}"/>
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
