<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Plant01.WpfUI.Controls"
                    xmlns:local="clr-namespace:Plant01.WpfUI.Themes">

    <Style TargetType="{x:Type controls:AntTimelineItem}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Top"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AntTimelineItem}">
                    <Grid Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Tail Line -->
                        <Border x:Name="Tail"
                                Width="2"
                                Background="{DynamicResource {x:Static local:DesignTokenKeys.BorderColor}}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Stretch"
                                Margin="0,10,0,-10" 
                                Grid.Column="0"/>

                        <!-- Default Dot -->
                        <Border x:Name="DotBorder"
                                Width="10" Height="10"
                                CornerRadius="5"
                                BorderThickness="2"
                                BorderBrush="{TemplateBinding Color}"
                                Background="Transparent"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Margin="0,5,0,0"
                                Grid.Column="0"
                                Visibility="Collapsed"/>

                        <!-- Custom Dot -->
                        <ContentPresenter x:Name="CustomDot"
                                          Content="{TemplateBinding Dot}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Top"
                                          Margin="0,5,0,0"
                                          Grid.Column="0"/>

                        <!-- Content -->
                        <ContentPresenter Grid.Column="1"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Margin="10,0,0,30"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- Show Default Dot if Dot property is null -->
                        <Trigger Property="Dot" Value="{x:Null}">
                            <Setter TargetName="DotBorder" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="CustomDot" Property="Visibility" Value="Collapsed"/>
                        </Trigger>

                        <!-- Hide Tail for Last Item -->
                        <Trigger Property="IsLast" Value="True">
                            <Setter TargetName="Tail" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type controls:AntTimeline}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AntTimeline}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <ItemsPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
