<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Plant01.WpfUI.Controls"
                    xmlns:local="clr-namespace:Plant01.WpfUI.Themes">

    <!-- Loading Spinner Animation (Duplicated for now) -->
    <Style x:Key="AntSwitch.LoadingSpinner" TargetType="Path">
        <Setter Property="RenderTransformOrigin" Value="0.5, 0.5"/>
        <Setter Property="Data" Value="M 7 1 A 6 6 0 1 1 1 7"/>
        <Setter Property="StrokeThickness" Value="1.5"/>
        <Setter Property="Fill" Value="Transparent"/>
        <Setter Property="Stretch" Value="None"/>
        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                         From="0" To="360" Duration="0:0:1" RepeatBehavior="Forever"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type controls:AntSwitch}">
        <Setter Property="Background" Value="{DynamicResource {x:Static local:DesignTokenKeys.FillColor}}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static local:DesignTokenKeys.TextOnPrimary}}" />
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Height" Value="22" />
        <Setter Property="Padding" Value="2" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AntSwitch}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Text -->
                        <ContentPresenter x:Name="LeftText"
                                          Grid.Column="0"
                                          Content="{TemplateBinding UnCheckedContent}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0"
                                          TextElement.Foreground="{DynamicResource {x:Static local:DesignTokenKeys.TextPrimary}}"
                                          Visibility="Collapsed"/>

                        <!-- Switch Body -->
                        <Grid Grid.Column="1" Width="44" Height="22">
                            <Border x:Name="Track"
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="11"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid x:Name="InsideTextGrid">
                                    <!-- Content (On/Off text) -->
                                    <ContentPresenter x:Name="OffContent"
                                                      Content="{TemplateBinding UnCheckedContent}"
                                                      HorizontalAlignment="Right"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,8,0"
                                                      TextElement.Foreground="{DynamicResource {x:Static local:DesignTokenKeys.TextOnPrimary}}"
                                                      TextElement.FontSize="12"/>
                                    <ContentPresenter x:Name="OnContent"
                                                      Content="{TemplateBinding CheckedContent}"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Center"
                                                      Margin="8,0,0,0"
                                                      TextElement.Foreground="{DynamicResource {x:Static local:DesignTokenKeys.TextOnPrimary}}"
                                                      TextElement.FontSize="12"
                                                      Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                            
                            <!-- Thumb -->
                            <Border x:Name="Thumb"
                                    Width="18" Height="18"
                                    Background="{DynamicResource {x:Static local:DesignTokenKeys.TextOnPrimary}}"
                                    CornerRadius="9"
                                    HorizontalAlignment="Left"
                                    Margin="2"
                                    Effect="{DynamicResource {x:Static local:DesignTokenKeys.BoxShadowSmall}}">
                                <Border.RenderTransform>
                                    <TranslateTransform X="0" />
                                </Border.RenderTransform>
                                <!-- Loading Spinner -->
                                <Path x:Name="LoadingIcon"
                                      Style="{StaticResource AntSwitch.LoadingSpinner}"
                                      Width="12" Height="12"
                                      Stroke="{DynamicResource {x:Static local:DesignTokenKeys.PrimaryColor}}"
                                      Visibility="Collapsed">
                                    <Path.RenderTransform>
                                        <RotateTransform Angle="0"/>
                                    </Path.RenderTransform>
                                </Path>
                            </Border>
                        </Grid>

                        <!-- Right Text -->
                        <ContentPresenter x:Name="RightText"
                                          Grid.Column="2"
                                          Content="{TemplateBinding UnCheckedContent}"
                                          VerticalAlignment="Center"
                                          Margin="8,0,0,0"
                                          TextElement.Foreground="{DynamicResource {x:Static local:DesignTokenKeys.TextPrimary}}"
                                          Visibility="Collapsed"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Track" Property="Background" Value="{DynamicResource {x:Static local:DesignTokenKeys.PrimaryColor}}" />
                            <Setter TargetName="OnContent" Property="Visibility" Value="Visible" />
                            <Setter TargetName="OffContent" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="Thumb" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform X="22" />
                                </Setter.Value>
                            </Setter>
                            <!-- Update Outside Text Content when Checked -->
                            <Setter TargetName="LeftText" Property="Content" Value="{Binding CheckedContent, RelativeSource={RelativeSource TemplatedParent}}"/>
                            <Setter TargetName="RightText" Property="Content" Value="{Binding CheckedContent, RelativeSource={RelativeSource TemplatedParent}}"/>
                        </Trigger>

                        <!-- TextPlacement Triggers -->
                        <Trigger Property="TextPlacement" Value="Left">
                            <Setter TargetName="InsideTextGrid" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="LeftText" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="TextPlacement" Value="Right">
                            <Setter TargetName="InsideTextGrid" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="RightText" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                            <Setter Property="Cursor" Value="Arrow" />
                        </Trigger>
                        <Trigger Property="Loading" Value="True">
                            <Setter TargetName="LoadingIcon" Property="Visibility" Value="Visible"/>
                            <Setter Property="IsEnabled" Value="False"/>
                            <Setter Property="Opacity" Value="0.7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
