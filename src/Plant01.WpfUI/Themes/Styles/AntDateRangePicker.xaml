<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Plant01.WpfUI.Controls"
                    xmlns:themes="clr-namespace:Plant01.WpfUI.Themes">

    <Style TargetType="{x:Type controls:AntDateRangePicker}">
        <Setter Property="Background" Value="{DynamicResource {x:Static themes:DesignTokenKeys.ComponentBackground}}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColor}}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
        <Setter Property="Height" Value="{DynamicResource {x:Static themes:DesignTokenKeys.ControlHeight}}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="CornerRadius" Value="{DynamicResource {x:Static themes:DesignTokenKeys.BorderRadius}}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AntDateRangePicker}">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <controls:AntDatePicker x:Name="PART_StartPicker"
                                                    Grid.Column="0"
                                                    SelectedDate="{Binding SelectedDateStart, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                    Placeholder="{Binding PlaceholderStart, RelativeSource={RelativeSource TemplatedParent}}"
                                                    BorderThickness="0"
                                                    Background="Transparent"
                                                    CornerRadius="0"
                                                    VerticalAlignment="Stretch"
                                                    VerticalContentAlignment="Center"
                                                    Padding="11,4,4,4"/>

                            <TextBlock Grid.Column="1" 
                                       Text="~" 
                                       VerticalAlignment="Center" 
                                       Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.PlaceholderColor}}"
                                       Margin="0,0"/>

                            <controls:AntDatePicker x:Name="PART_EndPicker"
                                                    Grid.Column="2"
                                                    SelectedDate="{Binding SelectedDateEnd, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                    Placeholder="{Binding PlaceholderEnd, RelativeSource={RelativeSource TemplatedParent}}"
                                                    BorderThickness="0"
                                                    Background="Transparent"
                                                    CornerRadius="0"
                                                    VerticalAlignment="Stretch"
                                                    VerticalContentAlignment="Center"
                                                    Padding="11,4,4,4"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource {x:Static themes:DesignTokenKeys.PrimaryColorHover}}"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource {x:Static themes:DesignTokenKeys.PrimaryColor}}"/>
                            <Setter TargetName="Border" Property="Effect" Value="{DynamicResource {x:Static themes:DesignTokenKeys.BoxShadow}}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource {x:Static themes:DesignTokenKeys.FillColor}}"/>
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>