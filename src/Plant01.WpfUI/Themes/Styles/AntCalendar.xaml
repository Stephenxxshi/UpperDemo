<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:themes="clr-namespace:Plant01.WpfUI.Themes">

    <!-- ================================================================= -->
    <!-- Calendar Day Button Style (The individual date cells)             -->
    <!-- ================================================================= -->
    <Style x:Key="AntCalendarDayButtonStyle" TargetType="{x:Type CalendarDayButton}">
        <Setter Property="MinWidth" Value="24"/>
        <Setter Property="MinHeight" Value="24"/>
        <Setter Property="FontSize" Value="{DynamicResource {x:Static themes:DesignTokenKeys.FontSize}}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CalendarDayButton}">
                    <Border x:Name="DayBorder"
                            Background="Transparent"
                            BorderThickness="0"
                            CornerRadius="{DynamicResource {x:Static themes:DesignTokenKeys.BorderRadius}}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Mouse Over -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="DayBorder" Property="Background" Value="{DynamicResource {x:Static themes:DesignTokenKeys.ControlItemBgHover}}"/>
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
                        </Trigger>
                        <!-- Selected (The date you picked) -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="DayBorder" Property="Background" Value="{DynamicResource {x:Static themes:DesignTokenKeys.PrimaryColor}}"/>
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static themes:DesignTokenKeys.TextOnPrimary}}"/>
                        </Trigger>
                        <!-- Today -->
                        <Trigger Property="IsToday" Value="True">
                            <Setter TargetName="DayBorder" Property="BorderBrush" Value="{DynamicResource {x:Static themes:DesignTokenKeys.PrimaryColor}}"/>
                            <Setter TargetName="DayBorder" Property="BorderThickness" Value="1"/>
                        </Trigger>
                        <!-- Selected AND Today (Priority to Selected Background) -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                                <Condition Property="IsToday" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="DayBorder" Property="BorderThickness" Value="1"/>
                            <Setter TargetName="DayBorder" Property="BorderBrush" Value="{DynamicResource {x:Static themes:DesignTokenKeys.TextOnPrimary}}"/>
                        </MultiTrigger>
                        <!-- Blackout / Inactive -->
                        <Trigger Property="IsBlackedOut" Value="True">
                            <Setter Property="Opacity" Value="0.3"/>
                            <Setter Property="Cursor" Value="No"/>
                        </Trigger>
                        <Trigger Property="IsInactive" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static themes:DesignTokenKeys.TextQuaternary}}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ================================================================= -->
    <!-- Calendar Button Style (Month/Year View Buttons)                   -->
    <!-- ================================================================= -->
    <Style x:Key="AntCalendarButtonStyle" TargetType="{x:Type CalendarButton}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="MinHeight" Value="24"/>
        <Setter Property="FontSize" Value="{DynamicResource {x:Static themes:DesignTokenKeys.FontSize}}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CalendarButton}">
                    <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{DynamicResource {x:Static themes:DesignTokenKeys.BorderRadius}}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource {x:Static themes:DesignTokenKeys.ControlItemBgHover}}"/>
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static themes:DesignTokenKeys.PrimaryColor}}"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                             <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource {x:Static themes:DesignTokenKeys.ControlItemBgHover}}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ================================================================= -->
    <!-- Calendar Item Style (The internal structure)                      -->
    <!-- ================================================================= -->
    <Style x:Key="AntCalendarItemStyle" TargetType="{x:Type CalendarItem}">
        <Setter Property="Margin" Value="0,3,0,3"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CalendarItem}">
                    <ControlTemplate.Resources>
                        <DataTemplate x:Key="{x:Static CalendarItem.DayTitleTemplateResourceKey}">
                            <TextBlock Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"
                                       FontWeight="Bold"
                                       FontSize="{DynamicResource {x:Static themes:DesignTokenKeys.FontSize}}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,6,0,6"
                                       Text="{Binding}"/>
                        </DataTemplate>
                    </ControlTemplate.Resources>
                    <Grid x:Name="PART_Root">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Prev Button -->
                            <Button x:Name="PART_PreviousButton" 
                                    Grid.Column="0"
                                    Width="28" Height="28"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid Background="Transparent">
                                            <Path Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z" 
                                                  Fill="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"
                                                  Stretch="Uniform" Width="12" Height="12"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Header Title (Month Year) -->
                            <Button x:Name="PART_HeaderButton" 
                                    Grid.Column="1"
                                    FontWeight="Bold" 
                                    FontSize="{DynamicResource {x:Static themes:DesignTokenKeys.FontSizeLG}}"
                                    Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand"
                                    HorizontalAlignment="Center"/>

                            <!-- Next Button -->
                            <Button x:Name="PART_NextButton" 
                                    Grid.Column="2"
                                    Width="28" Height="28"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid Background="Transparent">
                                            <Path Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z" 
                                                  Fill="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"
                                                  Stretch="Uniform" Width="12" Height="12"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <!-- Content (Days/Months/Years) -->
                        <Grid Grid.Row="1" Grid.ColumnSpan="3">
                            <Grid x:Name="PART_MonthView">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                            </Grid>
                            <Grid x:Name="PART_YearView" Visibility="Hidden">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                            </Grid>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ================================================================= -->
    <!-- Calendar Style                                                    -->
    <!-- ================================================================= -->
    <Style x:Key="AntCalendarStyle" TargetType="{x:Type Calendar}">
        <Setter Property="Background" Value="{DynamicResource {x:Static themes:DesignTokenKeys.PopoverBackground}}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColor}}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="CalendarDayButtonStyle" Value="{StaticResource AntCalendarDayButtonStyle}"/>
        <Setter Property="CalendarButtonStyle" Value="{StaticResource AntCalendarButtonStyle}"/>
        <Setter Property="CalendarItemStyle" Value="{StaticResource AntCalendarItemStyle}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Calendar}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource {x:Static themes:DesignTokenKeys.BorderRadius}}"
                            Padding="8">
                        <StackPanel HorizontalAlignment="Center" x:Name="PART_Root">
                            <CalendarItem x:Name="PART_CalendarItem"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Style="{TemplateBinding CalendarItemStyle}"/>
                        </StackPanel>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="270" Color="Black" Opacity="0.1"/>
                        </Border.Effect>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
