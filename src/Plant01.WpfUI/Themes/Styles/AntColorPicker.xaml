<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Plant01.WpfUI.Controls"
                    xmlns:local="clr-namespace:Plant01.WpfUI.Themes"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <Style TargetType="{x:Type controls:AntColorPicker}">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AntColorPicker}">
                    <Grid>
                        <ToggleButton x:Name="PART_ToggleButton"
                                      IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                      Cursor="Hand"
                                      BorderThickness="1"
                                      BorderBrush="{DynamicResource {x:Static local:DesignTokenKeys.BorderColor}}"
                                      Background="{DynamicResource {x:Static local:DesignTokenKeys.ComponentBackground}}"
                                      Padding="4">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="{DynamicResource {x:Static local:DesignTokenKeys.BorderRadius}}">
                                                    <Border Background="{Binding SelectedColor, RelativeSource={RelativeSource AncestorType=controls:AntColorPicker}, Converter={x:Static local:ColorToBrushConverter.Instance}}"
                                                            CornerRadius="2"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>

                        <Popup x:Name="PART_Popup"
                               IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                               StaysOpen="False"
                               PlacementTarget="{Binding ElementName=PART_ToggleButton}"
                               Placement="Bottom"
                               AllowsTransparency="True"
                               PopupAnimation="Slide">
                            <Border Background="{DynamicResource {x:Static local:DesignTokenKeys.ComponentBackground}}"
                                    BorderBrush="{DynamicResource {x:Static local:DesignTokenKeys.BorderColor}}"
                                    BorderThickness="1"
                                    CornerRadius="{DynamicResource {x:Static local:DesignTokenKeys.BorderRadius}}"
                                    Padding="8"
                                    Margin="0,4,0,0"
                                    Effect="{DynamicResource {x:Static local:DesignTokenKeys.BoxShadow}}">
                                    <Grid Width="240">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/> <!-- Color Panel -->
                                        <RowDefinition Height="Auto"/> <!-- Hue Slider -->
                                        <RowDefinition Height="Auto"/> <!-- Hex Input -->
                                        <RowDefinition Height="Auto"/> <!-- Presets -->
                                    </Grid.RowDefinitions>

                                    <!-- Color Panel (Saturation/Value) -->
                                    <Grid Grid.Row="0" Height="160" Margin="0,0,0,8">
                                        <Border x:Name="PART_ColorPanel" 
                                                Background="{Binding HueColor, RelativeSource={RelativeSource AncestorType=controls:AntColorPicker}, Converter={x:Static local:ColorToBrushConverter.Instance}}"
                                                CornerRadius="4" ClipToBounds="True" Cursor="Cross">
                                            <Grid>
                                                <Rectangle>
                                                    <Rectangle.Fill>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                            <GradientStop Color="White" Offset="0"/>
                                                            <GradientStop Color="Transparent" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Rectangle.Fill>
                                                </Rectangle>
                                                <Rectangle>
                                                    <Rectangle.Fill>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                            <GradientStop Color="Transparent" Offset="0"/>
                                                            <GradientStop Color="Black" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Rectangle.Fill>
                                                </Rectangle>
                                                <Canvas>
                                                    <Ellipse x:Name="PART_ColorThumb" Width="12" Height="12" Stroke="White" StrokeThickness="2" IsHitTestVisible="False">
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="0" Opacity="0.5"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                </Canvas>
                                            </Grid>
                                        </Border>
                                    </Grid>

                                    <!-- Hue Slider -->
                                    <Slider x:Name="PART_HueSlider" Grid.Row="1" Margin="0,0,0,8" Minimum="0" Maximum="360" SmallChange="1" LargeChange="10" IsMoveToPointEnabled="True">
                                        <Slider.Template>
                                            <ControlTemplate TargetType="Slider">
                                                <Grid Height="12">
                                                    <Border CornerRadius="6">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="#FF0000" Offset="0.0" />
                                                                <GradientStop Color="#FFFF00" Offset="0.167" />
                                                                <GradientStop Color="#00FF00" Offset="0.333" />
                                                                <GradientStop Color="#00FFFF" Offset="0.5" />
                                                                <GradientStop Color="#0000FF" Offset="0.667" />
                                                                <GradientStop Color="#FF00FF" Offset="0.833" />
                                                                <GradientStop Color="#FF0000" Offset="1.0" />
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                    </Border>
                                                    <Track x:Name="PART_Track">
                                                        <Track.Thumb>
                                                            <Thumb>
                                                                <Thumb.Template>
                                                                    <ControlTemplate TargetType="Thumb">
                                                                        <Ellipse Width="16" Height="16" Fill="White" Stroke="{DynamicResource {x:Static local:DesignTokenKeys.BorderColor}}" StrokeThickness="1">
                                                                            <Ellipse.Effect>
                                                                                <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="0" Opacity="0.2"/>
                                                                            </Ellipse.Effect>
                                                                        </Ellipse>
                                                                    </ControlTemplate>
                                                                </Thumb.Template>
                                                            </Thumb>
                                                        </Track.Thumb>
                                                    </Track>
                                                </Grid>
                                            </ControlTemplate>
                                        </Slider.Template>
                                    </Slider>

                                    <!-- Hex Input & Preview -->
                                    <Grid Grid.Row="2" Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" Width="24" Height="24" CornerRadius="4" Margin="0,0,8,0"
                                                Background="{Binding SelectedColor, RelativeSource={RelativeSource AncestorType=controls:AntColorPicker}, Converter={x:Static local:ColorToBrushConverter.Instance}}"
                                                BorderThickness="1" BorderBrush="{DynamicResource {x:Static local:DesignTokenKeys.BorderColorSplit}}"/>
                                        
                                        <TextBox Grid.Column="1" Text="{Binding SelectedColor, RelativeSource={RelativeSource AncestorType=controls:AntColorPicker}, Mode=OneWay}" 
                                                 IsReadOnly="True"
                                                 Style="{DynamicResource AntDesign.Input.Base}"
                                                 VerticalContentAlignment="Center"/>
                                    </Grid>
                                    
                                    <!-- Preset Colors -->
                                    <ItemsControl x:Name="PresetColors" Grid.Row="3">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Width="20" Height="20" Margin="4"
                                                        Cursor="Hand"
                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=controls:AntColorPicker}, Path=SelectColorCommand}"
                                                        CommandParameter="{Binding}">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{Binding Converter={x:Static local:ColorToBrushConverter.Instance}}"
                                                                    CornerRadius="4"
                                                                    BorderThickness="1"
                                                                    BorderBrush="{DynamicResource {x:Static local:DesignTokenKeys.BorderColorSplit}}">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Effect" Value="{DynamicResource {x:Static local:DesignTokenKeys.BoxShadowSmall}}"/>
                                                                                <Setter Property="RenderTransform">
                                                                                    <Setter.Value>
                                                                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1" CenterX="10" CenterY="10"/>
                                                                                    </Setter.Value>
                                                                                </Setter>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <sys:String>#1677ff</sys:String>
                                        <sys:String>#f5222d</sys:String>
                                        <sys:String>#fa8c16</sys:String>
                                        <sys:String>#faad14</sys:String>
                                        <sys:String>#fadb14</sys:String>
                                        <sys:String>#a0d911</sys:String>
                                        <sys:String>#52c41a</sys:String>
                                        <sys:String>#13c2c2</sys:String>
                                        <sys:String>#2f54eb</sys:String>
                                        <sys:String>#722ed1</sys:String>
                                        <sys:String>#eb2f96</sys:String>
                                        <sys:String>#000000</sys:String>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
