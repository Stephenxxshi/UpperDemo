<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Plant01.WpfUI.Controls"
                    xmlns:local="clr-namespace:Plant01.WpfUI.Themes"
                    xmlns:converters="clr-namespace:Plant01.WpfUI.Converters">

    <Style TargetType="{x:Type controls:AntStepItem}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AntStepItem}">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Icon Area -->
                        <Border x:Name="IconBorder"
                                Width="32" Height="32"
                                CornerRadius="16"
                                BorderThickness="1"
                                BorderBrush="{DynamicResource {x:Static local:DesignTokenKeys.BorderColor}}"
                                Background="{DynamicResource {x:Static local:DesignTokenKeys.ComponentBackground}}"
                                Margin="0,0,8,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <Grid>
                                <!-- Number -->
                                <TextBlock x:Name="NumberText"
                                           Text="{TemplateBinding DisplayIndex}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource {x:Static local:DesignTokenKeys.TextSecondary}}"/>
                                
                                <!-- Check Icon (Finish) -->
                                <TextBlock x:Name="CheckIcon"
                                           Text="✓"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource {x:Static local:DesignTokenKeys.PrimaryColor}}"
                                           Visibility="Collapsed"/>

                                <!-- Error Icon -->
                                <TextBlock x:Name="ErrorIcon"
                                           Text="✕"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource {x:Static local:DesignTokenKeys.ErrorColor}}"
                                           Visibility="Collapsed"/>
                                
                                <!-- Custom Icon -->
                                <ContentPresenter Content="{TemplateBinding Icon}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Content Area -->
                        <StackPanel x:Name="ContentPanel" Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="TitleText"
                                       Text="{TemplateBinding Title}"
                                       FontSize="{DynamicResource {x:Static local:DesignTokenKeys.FontSizeLG}}"
                                       Foreground="{DynamicResource {x:Static local:DesignTokenKeys.TextPrimary}}"
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="DescText"
                                       Text="{TemplateBinding Description}"
                                       FontSize="{DynamicResource {x:Static local:DesignTokenKeys.FontSize}}"
                                       Foreground="{DynamicResource {x:Static local:DesignTokenKeys.TextSecondary}}"
                                       Margin="0,4,0,0"
                                       Visibility="{TemplateBinding Description, Converter={x:Static converters:StringVisibilityConverter.Instance}}"/>
                        </StackPanel>

                        <!-- Connecting Line -->
                        <Border x:Name="Line"
                                Height="1"
                                Background="{DynamicResource {x:Static local:DesignTokenKeys.BorderColorSplit}}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch"
                                Margin="16,0,0,0"
                                Grid.Column="1"
                                Panel.ZIndex="-1"/>

                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- Hide Line for Last Item -->
                        <Trigger Property="IsLast" Value="True">
                            <Setter TargetName="Line" Property="Visibility" Value="Collapsed"/>
                        </Trigger>

                        <!-- Status: Process -->
                        <Trigger Property="Status" Value="Process">
                            <Setter TargetName="IconBorder" Property="Background" Value="{DynamicResource {x:Static local:DesignTokenKeys.PrimaryColor}}"/>
                            <Setter TargetName="IconBorder" Property="BorderBrush" Value="{DynamicResource {x:Static local:DesignTokenKeys.PrimaryColor}}"/>
                            <Setter TargetName="NumberText" Property="Foreground" Value="{DynamicResource {x:Static local:DesignTokenKeys.TextOnPrimary}}"/>
                            <Setter TargetName="TitleText" Property="Foreground" Value="{DynamicResource {x:Static local:DesignTokenKeys.TextPrimary}}"/>
                            <Setter TargetName="TitleText" Property="FontWeight" Value="Bold"/>
                        </Trigger>

                        <!-- Status: Finish -->
                        <Trigger Property="Status" Value="Finish">
                            <Setter TargetName="IconBorder" Property="BorderBrush" Value="{DynamicResource {x:Static local:DesignTokenKeys.PrimaryColor}}"/>
                            <Setter TargetName="IconBorder" Property="Background" Value="{DynamicResource {x:Static local:DesignTokenKeys.ComponentBackground}}"/>
                            <Setter TargetName="NumberText" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="CheckIcon" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="TitleText" Property="Foreground" Value="{DynamicResource {x:Static local:DesignTokenKeys.TextPrimary}}"/>
                            <Setter TargetName="Line" Property="Background" Value="{DynamicResource {x:Static local:DesignTokenKeys.PrimaryColor}}"/>
                        </Trigger>

                        <!-- Status: Error -->
                        <Trigger Property="Status" Value="Error">
                            <Setter TargetName="IconBorder" Property="Background" Value="{DynamicResource {x:Static local:DesignTokenKeys.ComponentBackground}}"/>
                            <Setter TargetName="IconBorder" Property="BorderBrush" Value="{DynamicResource {x:Static local:DesignTokenKeys.ErrorColor}}"/>
                            <Setter TargetName="NumberText" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="ErrorIcon" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="TitleText" Property="Foreground" Value="{DynamicResource {x:Static local:DesignTokenKeys.ErrorColor}}"/>
                        </Trigger>

                        <!-- Status: Wait -->
                        <Trigger Property="Status" Value="Wait">
                            <Setter TargetName="IconBorder" Property="BorderBrush" Value="{DynamicResource {x:Static local:DesignTokenKeys.BorderColor}}"/>
                            <Setter TargetName="NumberText" Property="Foreground" Value="{DynamicResource {x:Static local:DesignTokenKeys.TextSecondary}}"/>
                            <Setter TargetName="TitleText" Property="Foreground" Value="{DynamicResource {x:Static local:DesignTokenKeys.TextSecondary}}"/>
                        </Trigger>

                        <!-- Size: Small -->
                        <Trigger Property="Size" Value="Small">
                            <Setter TargetName="IconBorder" Property="Width" Value="24"/>
                            <Setter TargetName="IconBorder" Property="Height" Value="24"/>
                            <Setter TargetName="IconBorder" Property="CornerRadius" Value="12"/>
                            <Setter TargetName="TitleText" Property="FontSize" Value="{DynamicResource {x:Static local:DesignTokenKeys.FontSize}}"/>
                            <Setter TargetName="DescText" Property="FontSize" Value="{DynamicResource {x:Static local:DesignTokenKeys.FontSizeSM}}"/>
                            <Setter TargetName="Line" Property="Margin" Value="12,0,0,0"/>
                        </Trigger>

                        <!-- Size: Large -->
                        <Trigger Property="Size" Value="Large">
                            <Setter TargetName="IconBorder" Property="Width" Value="40"/>
                            <Setter TargetName="IconBorder" Property="Height" Value="40"/>
                            <Setter TargetName="IconBorder" Property="CornerRadius" Value="20"/>
                            <Setter TargetName="TitleText" Property="FontSize" Value="{DynamicResource {x:Static local:DesignTokenKeys.FontSizeLG}}"/>
                            <Setter TargetName="DescText" Property="FontSize" Value="{DynamicResource {x:Static local:DesignTokenKeys.FontSize}}"/>
                            <Setter TargetName="Line" Property="Margin" Value="20,0,0,0"/>
                        </Trigger>

                        <!-- Progress Dot -->
                        <Trigger Property="ProgressDot" Value="True">
                            <Setter TargetName="NumberText" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="IconBorder" Property="Width" Value="8"/>
                            <Setter TargetName="IconBorder" Property="Height" Value="8"/>
                            <Setter TargetName="IconBorder" Property="CornerRadius" Value="4"/>
                            <Setter TargetName="CheckIcon" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="ErrorIcon" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="Line" Property="Margin" Value="4,0,0,0"/>
                        </Trigger>

                        <!-- Label Placement: Vertical -->
                        <Trigger Property="LabelPlacement" Value="Vertical">
                            <Setter TargetName="ContentPanel" Property="Grid.Row" Value="1"/>
                            <Setter TargetName="ContentPanel" Property="Grid.Column" Value="0"/>
                            <Setter TargetName="ContentPanel" Property="Grid.ColumnSpan" Value="2"/>
                            <Setter TargetName="ContentPanel" Property="HorizontalAlignment" Value="Center"/>
                            <Setter TargetName="ContentPanel" Property="Margin" Value="0,8,0,0"/>
                            <Setter TargetName="TitleText" Property="TextAlignment" Value="Center"/>
                            <Setter TargetName="DescText" Property="TextAlignment" Value="Center"/>
                            <Setter TargetName="Line" Property="Grid.Column" Value="1"/>
                            <Setter TargetName="Line" Property="Grid.Row" Value="0"/>
                            <Setter TargetName="Line" Property="Margin" Value="0,0,0,0"/>
                        </Trigger>

                        <!-- Type: Navigation -->
                        <Trigger Property="Type" Value="Navigation">
                            <Setter TargetName="IconBorder" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="ContentPanel" Property="Margin" Value="12,0,20,0"/>
                            <Setter TargetName="Line" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="Line" Property="Height" Value="32"/>
                            <Setter TargetName="Line" Property="Margin" Value="0,0,-16,0"/>
                            <Setter TargetName="Line" Property="Background" Value="Transparent"/>
                            <Setter TargetName="Line" Property="BorderBrush" Value="{DynamicResource {x:Static local:DesignTokenKeys.BorderColorSplit}}"/>
                            <Setter TargetName="Line" Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter TargetName="Line" Property="RenderTransform">
                                <Setter.Value>
                                    <SkewTransform AngleX="-20"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsClickable, RelativeSource={RelativeSource AncestorType=controls:AntSteps}}" Value="True">
                <Setter Property="Cursor" Value="Hand"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type controls:AntSteps}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AntSteps}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <ItemsPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="1"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Direction" Value="Vertical">
                <Setter Property="ItemsPanel">
                    <Setter.Value>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
