<Window
    x:Class="wpfuidemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI"
    Title="WpfUI Demo"
    Width="900"
    Height="600"
    Background="{DynamicResource {x:Static themes:DesignTokenKeys.ComponentBackground}}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Navigation Menu  -->
        <Border
            Background="{DynamicResource {x:Static themes:DesignTokenKeys.ComponentBackground}}"
            BorderBrush="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColor}}"
            BorderThickness="0,0,1,0">
            <controls:AntMenu
                x:Name="NavMenu"
                Margin="0,10,0,0"
                SelectedItemChanged="NavMenu_SelectedItemChanged">
                <controls:AntMenuItem
                    Header="General"
                    Icon="🏠"
                    IsExpanded="True">
                    <controls:AntMenuItem
                        Header="Dashboard"
                        IsSelected="True"
                        Tag="Dashboard" />
                    <controls:AntMenuItem Header="Button 按钮" Tag="Button" />
                </controls:AntMenuItem>
                <controls:AntMenuItem
                    Header="Layout"
                    Icon="📐"
                    IsExpanded="True">
                    <controls:AntMenuItem Header="Space 间距" Tag="Layout" />
                    <controls:AntMenuItem Header="Divider 分割线" Tag="Layout" />
                    <controls:AntMenuItem Header="Splitter 分割面板" Tag="Layout" />
                </controls:AntMenuItem>
                <controls:AntMenuItem
                    Header="Data Entry"
                    Icon="📝"
                    IsExpanded="True">
                    <controls:AntMenuItem Header="Input 输入框" Tag="Input" />
                    <controls:AntMenuItem Header="Checkbox 多选框" Tag="Checkbox" />
                    <controls:AntMenuItem Header="ColorPicker 颜色选择器" Tag="ColorPicker" />
                    <controls:AntMenuItem Header="DatePicker 日期选择" Tag="DatePicker" />
                    <controls:AntMenuItem Header="Calendar 日历" Tag="Calendar" />
                    <controls:AntMenuItem Header="Select 选择器" Tag="Select" />
                    <controls:AntMenuItem Header="Switch 开关" Tag="Switch" />
                </controls:AntMenuItem>
                <controls:AntMenuItem
                    Header="Data Display"
                    Icon="📊"
                    IsExpanded="True">
                    <controls:AntMenuItem Header="DataGrid 表格" Tag="DataGrid" />
                    <controls:AntMenuItem Header="Timeline 时间轴" Tag="Timeline" />
                    <controls:AntMenuItem Header="Steps 步骤条" Tag="Steps" />
                </controls:AntMenuItem>
                <controls:AntMenuItem
                    Header="Feedback"
                    Icon="💬"
                    IsExpanded="True">
                    <controls:AntMenuItem Header="Alert 警告提示" Tag="Alert"/>
                    <controls:AntMenuItem Header="Modal 对话框" Tag="Modal" />
                </controls:AntMenuItem>
                <controls:AntMenuItem
                    Header="Navigation"
                    Icon="🧭"
                    IsExpanded="True">
                    <controls:AntMenuItem Header="Pagination 分页" Tag="Pagination" />
                </controls:AntMenuItem>
            </controls:AntMenu>
        </Border>

        <!--  Content Area  -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Toolbar  -->
            <StackPanel
                Margin="0,0,0,20"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <!--  Color Palette  -->
                <StackPanel
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"
                        Text="Theme: " />
                    <controls:AntColorPicker VerticalAlignment="Center" SelectedColorChanged="ColorPicker_SelectedColorChanged" />
                </StackPanel>

                <controls:AntButton
                    Margin="0,0,10,0"
                    Click="ToggleTheme_Click"
                    Content="Toggle Dark Mode"
                    Type="Default" />

                <controls:AntSelect
                    x:Name="DensityCombo"
                    Width="100"
                    VerticalContentAlignment="Center"
                    SelectedIndex="1"
                    SelectionChanged="Density_SelectionChanged">
                    <ComboBoxItem Content="Compact" Tag="Compact" />
                    <ComboBoxItem Content="Default" Tag="Default" />
                    <ComboBoxItem Content="Touch" Tag="Touch" />
                </controls:AntSelect>
            </StackPanel>

            <!--  Page Content  -->
            <ContentControl x:Name="MainContent" Grid.Row="1" />
        </Grid>
    </Grid>
</Window>
