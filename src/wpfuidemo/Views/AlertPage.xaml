<UserControl x:Class="wpfuidemo.Views.AlertPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI"
             xmlns:ui="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="AntAlert" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Grid.ColumnSpan="2"/>

        <!-- Preview Area -->
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColor}}" BorderThickness="1" CornerRadius="4" Margin="0,0,20,0" Background="{DynamicResource {x:Static themes:DesignTokenKeys.ComponentBackground}}">
            <Grid VerticalAlignment="Center" Margin="20">
                <ui:AntAlert x:Name="DemoAlert" 
                             Message="Alert Message" 
                             Description="This is a description of the alert message."
                             Type="Success"
                             ShowIcon="True"/>
            </Grid>
        </Border>

        <!-- Settings Panel -->
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColor}}" BorderThickness="1" Padding="15" CornerRadius="4" Background="{DynamicResource {x:Static themes:DesignTokenKeys.ComponentBackground}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Configuration" FontWeight="Bold" Margin="0,0,0,15" FontSize="16"/>

                    <!-- Type -->
                    <TextBlock Text="Type" Margin="0,0,0,5" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>
                    <ComboBox x:Name="TypeCombo" SelectedIndex="0" Margin="0,0,0,15" SelectionChanged="TypeCombo_SelectionChanged">
                        <ComboBoxItem Content="Success"/>
                        <ComboBoxItem Content="Info"/>
                        <ComboBoxItem Content="Warning"/>
                        <ComboBoxItem Content="Error"/>
                    </ComboBox>

                    <!-- Message -->
                    <TextBlock Text="Message" Margin="0,0,0,5" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>
                    <TextBox Text="{Binding ElementName=DemoAlert, Path=Message, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" Padding="4"/>

                    <!-- Description -->
                    <TextBlock Text="Description" Margin="0,0,0,5" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>
                    <TextBox Text="{Binding ElementName=DemoAlert, Path=Description, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" Padding="4"/>

                    <!-- Toggles -->
                    <CheckBox Content="Show Icon" IsChecked="{Binding ElementName=DemoAlert, Path=ShowIcon}" Margin="0,0,0,10"/>
                    <CheckBox Content="Closable" IsChecked="{Binding ElementName=DemoAlert, Path=Closable}" Margin="0,0,0,10"/>
                    <CheckBox Content="Banner Mode" IsChecked="{Binding ElementName=DemoAlert, Path=Banner}" Margin="0,0,0,10"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>


