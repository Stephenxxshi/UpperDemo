<UserControl x:Class="wpfuidemo.Views.AlertPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI"
             xmlns:ui="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Alert 警告提示" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
            <TextBlock Text="警告提示，展现需要关注的信息。" FontSize="14" Margin="0,0,0,20" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>

            <TextBlock Text="Basic Usage" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
            <StackPanel Margin="0,0,0,20">
                <ui:AntAlert Message="Success Text" Type="Success" Margin="0,0,0,10"/>
                <ui:AntAlert Message="Info Text" Type="Info" Margin="0,0,0,10"/>
                <ui:AntAlert Message="Warning Text" Type="Warning" Margin="0,0,0,10"/>
                <ui:AntAlert Message="Error Text" Type="Error" Margin="0,0,0,10"/>
            </StackPanel>

            <TextBlock Text="Closable" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
            <StackPanel Margin="0,0,0,20">
                <ui:AntAlert Message="Warning Text" Type="Warning" Closable="True" Margin="0,0,0,10"/>
                <ui:AntAlert Message="Error Text" Description="Error Description Error Description Error Description Error Description" Type="Error" Closable="True" Margin="0,0,0,10"/>
            </StackPanel>

            <TextBlock Text="With Icon" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
            <StackPanel Margin="0,0,0,20">
                <ui:AntAlert Message="Success Tips" Type="Success" ShowIcon="True" Margin="0,0,0,10"/>
                <ui:AntAlert Message="Informational Notes" Type="Info" ShowIcon="True" Margin="0,0,0,10"/>
                <ui:AntAlert Message="Warning" Type="Warning" ShowIcon="True" Margin="0,0,0,10"/>
                <ui:AntAlert Message="Error" Type="Error" ShowIcon="True" Margin="0,0,0,10"/>
            </StackPanel>

            <TextBlock Text="Description" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
            <StackPanel Margin="0,0,0,20">
                <ui:AntAlert Message="Success Text" Description="Detailed description and advice about successful copywriting." Type="Success" ShowIcon="True" Margin="0,0,0,10"/>
                <ui:AntAlert Message="Info Text" Description="Detailed description and advice about successful copywriting." Type="Info" ShowIcon="True" Margin="0,0,0,10"/>
                <ui:AntAlert Message="Warning Text" Description="Detailed description and advice about successful copywriting." Type="Warning" ShowIcon="True" Margin="0,0,0,10"/>
                <ui:AntAlert Message="Error Text" Description="Detailed description and advice about successful copywriting." Type="Error" ShowIcon="True" Margin="0,0,0,10"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
