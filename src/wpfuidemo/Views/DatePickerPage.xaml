<UserControl x:Class="wpfuidemo.Views.DatePickerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
             xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI">
    <StackPanel Margin="20">
        <TextBlock Text="DatePicker" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
        
        <TextBlock Text="Basic" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
        <ui:AntDatePicker Width="200" HorizontalAlignment="Left" Margin="0,0,0,20"/>
        
        <TextBlock Text="With Placeholder" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
        <ui:AntDatePicker Width="200" HorizontalAlignment="Left" Placeholder="Select a date" Margin="0,0,0,20"/>

        <TextBlock Text="Disabled" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
        <ui:AntDatePicker Width="200" HorizontalAlignment="Left" IsEnabled="False" Margin="0,0,0,20"/>

        <TextBlock Text="Range Picker" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
        <ui:AntDateRangePicker Width="300" HorizontalAlignment="Left" Margin="0,0,0,20"/>
    </StackPanel>
</UserControl>
