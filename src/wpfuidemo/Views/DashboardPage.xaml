<UserControl x:Class="wpfuidemo.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Welcome to Ant Design WPF" 
                   FontSize="{DynamicResource {x:Static themes:DesignTokenKeys.FontSizeLG}}" 
                   Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>
        <TextBlock Text="Select an item from the menu to view components." 
                   Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>
    </StackPanel>
</UserControl>
