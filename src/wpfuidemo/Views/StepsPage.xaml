<UserControl x:Class="wpfuidemo.Views.StepsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
             xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="AntSteps" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Grid.ColumnSpan="2"/>

        <!-- Preview Area -->
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColor}}" BorderThickness="1" CornerRadius="4" Margin="0,0,20,0" Background="{DynamicResource {x:Static themes:DesignTokenKeys.ComponentBackground}}">
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                <controls:AntSteps x:Name="DemoSteps" Current="1">
                    <controls:AntStepItem Title="Finished" Description="This is a description."/>
                    <controls:AntStepItem Title="In Progress" Description="This is a description."/>
                    <controls:AntStepItem Title="Waiting" Description="This is a description."/>
                </controls:AntSteps>
            </Grid>
        </Border>

        <!-- Settings Panel -->
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColor}}" BorderThickness="1" Padding="15" CornerRadius="4" Background="{DynamicResource {x:Static themes:DesignTokenKeys.ComponentBackground}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Configuration" FontWeight="Bold" Margin="0,0,0,15" FontSize="16"/>

                    <!-- Current -->
                    <TextBlock Text="Current Step" Margin="0,0,0,5" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>
                    <TextBox Text="{Binding ElementName=DemoSteps, Path=Current, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" Padding="4"/>

                    <!-- Status -->
                    <TextBlock Text="Status" Margin="0,0,0,5" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>
                    <ComboBox x:Name="StatusCombo" SelectedIndex="0" Margin="0,0,0,15" SelectionChanged="StatusCombo_SelectionChanged">
                        <ComboBoxItem Content="Process"/>
                        <ComboBoxItem Content="Wait"/>
                        <ComboBoxItem Content="Finish"/>
                        <ComboBoxItem Content="Error"/>
                    </ComboBox>

                    <!-- Size -->
                    <TextBlock Text="Size" Margin="0,0,0,5" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>
                    <ComboBox x:Name="SizeCombo" SelectedIndex="1" Margin="0,0,0,15" SelectionChanged="SizeCombo_SelectionChanged">
                        <ComboBoxItem Content="Small"/>
                        <ComboBoxItem Content="Default"/>
                        <ComboBoxItem Content="Large"/>
                    </ComboBox>

                    <!-- Direction -->
                    <TextBlock Text="Direction" Margin="0,0,0,5" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>
                    <ComboBox x:Name="DirectionCombo" SelectedIndex="0" Margin="0,0,0,15" SelectionChanged="DirectionCombo_SelectionChanged">
                        <ComboBoxItem Content="Horizontal"/>
                        <ComboBoxItem Content="Vertical"/>
                    </ComboBox>

                    <!-- Label Placement -->
                    <TextBlock Text="Label Placement" Margin="0,0,0,5" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>
                    <ComboBox x:Name="LabelPlacementCombo" SelectedIndex="0" Margin="0,0,0,15" SelectionChanged="LabelPlacementCombo_SelectionChanged">
                        <ComboBoxItem Content="Horizontal"/>
                        <ComboBoxItem Content="Vertical"/>
                    </ComboBox>

                    <!-- Type -->
                    <TextBlock Text="Type" Margin="0,0,0,5" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>
                    <ComboBox x:Name="TypeCombo" SelectedIndex="0" Margin="0,0,0,15" SelectionChanged="TypeCombo_SelectionChanged">
                        <ComboBoxItem Content="Default"/>
                        <ComboBoxItem Content="Navigation"/>
                    </ComboBox>

                    <!-- Start Index -->
                    <TextBlock Text="Start Index" Margin="0,0,0,5" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>
                    <TextBox Text="{Binding ElementName=DemoSteps, Path=StartIndex, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" Padding="4"/>

                    <!-- Toggles -->
                    <CheckBox Content="Is Clickable" IsChecked="{Binding ElementName=DemoSteps, Path=IsClickable}" Margin="0,0,0,10"/>
                    <CheckBox Content="Progress Dot" IsChecked="{Binding ElementName=DemoSteps, Path=ProgressDot}" Margin="0,0,0,10"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>


