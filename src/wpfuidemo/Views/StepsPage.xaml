<UserControl x:Class="wpfuidemo.Views.StepsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Basic Steps" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <controls:AntSteps Current="1" Margin="0,0,0,40">
                <controls:AntStepItem Title="Finished" Description="This is a description."/>
                <controls:AntStepItem Title="In Progress" Description="This is a description."/>
                <controls:AntStepItem Title="Waiting" Description="This is a description."/>
            </controls:AntSteps>

            <TextBlock Text="Small Size" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <controls:AntSteps Current="1" Size="Small" Margin="0,0,0,40">
                <controls:AntStepItem Title="Finished"/>
                <controls:AntStepItem Title="In Progress"/>
                <controls:AntStepItem Title="Waiting"/>
            </controls:AntSteps>

            <TextBlock Text="Large Size" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <controls:AntSteps Current="1" Size="Large" Margin="0,0,0,40">
                <controls:AntStepItem Title="Finished" Description="This is a description."/>
                <controls:AntStepItem Title="In Progress" Description="This is a description."/>
                <controls:AntStepItem Title="Waiting" Description="This is a description."/>
            </controls:AntSteps>

            <TextBlock Text="With Error" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <controls:AntSteps Current="1" Status="Error" Margin="0,0,0,40">
                <controls:AntStepItem Title="Finished" Description="This is a description."/>
                <controls:AntStepItem Title="Error" Description="This is a description."/>
                <controls:AntStepItem Title="Waiting" Description="This is a description."/>
            </controls:AntSteps>

            <TextBlock Text="Interactive Control" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <StackPanel>
                <controls:AntSteps x:Name="InteractiveSteps" Current="0" Margin="0,0,0,20">
                    <controls:AntStepItem Title="Step 1" Description="First step."/>
                    <controls:AntStepItem Title="Step 2" Description="Second step."/>
                    <controls:AntStepItem Title="Step 3" Description="Third step."/>
                </controls:AntSteps>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Previous" Click="Prev_Click" Margin="0,0,10,0" Width="80"/>
                    <Button Content="Next" Click="Next_Click" Width="80"/>
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
