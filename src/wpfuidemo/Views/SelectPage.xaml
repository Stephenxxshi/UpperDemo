<UserControl x:Class="wpfuidemo.Views.SelectPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI"
             xmlns:ui="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="AntSelect" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Basic Usage" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ui:AntSelect Width="200" Margin="0,0,0,20" AllowClear="True">
                <ComboBoxItem Content="Jack"/>
                <ComboBoxItem Content="Lucy"/>
                <ComboBoxItem Content="Disabled" IsEnabled="False"/>
                <ComboBoxItem Content="Yiminghe"/>
            </ui:AntSelect>

            <TextBlock Text="With Data Binding" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ui:AntSelect Width="200" Margin="0,0,0,20" 
                          ItemsSource="{Binding Options}" 
                          AllowClear="True"
                          Placeholder="Select from list"/>

            <TextBlock Text="Disabled" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ui:AntSelect Width="200" Margin="0,0,0,20" IsEnabled="False" Placeholder="Disabled" Text="Lucy"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>
