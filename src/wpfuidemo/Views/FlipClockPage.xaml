<UserControl x:Class="wpfuidemo.Views.FlipClockPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
             xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Flip Clock" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <Border BorderBrush="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColor}}" BorderThickness="1" Padding="40" CornerRadius="4" Background="{DynamicResource {x:Static themes:DesignTokenKeys.ComponentBackground}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <controls:AntFlipClock HorizontalAlignment="Center"/>
                    <TextBlock Text="Current System Time" Margin="0,20,0,0" HorizontalAlignment="Center" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextTertiary}}"/>
                </StackPanel>
            </Border>

            <TextBlock Text="Standalone Flip Number" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
            <Border BorderBrush="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColor}}" BorderThickness="1" Padding="40" CornerRadius="4" Background="{DynamicResource {x:Static themes:DesignTokenKeys.ComponentBackground}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <controls:AntFlipNumber x:Name="DemoNumber" Number="0" Margin="0,0,20,0"/>
                        <Button Content="Flip Next" Click="Button_Click" Padding="10,5"/>
                    </StackPanel>
                    <TextBlock Text="Click button to flip number" Margin="0,20,0,0" HorizontalAlignment="Center" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextTertiary}}"/>
                </StackPanel>
            </Border>

            <TextBlock Text="Usage" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
            <TextBlock Text="&lt;controls:AntFlipClock /&gt;" FontFamily="Consolas" Background="{DynamicResource {x:Static themes:DesignTokenKeys.BodyBackground}}" Padding="10"/>
        </StackPanel>
    </Grid>
</UserControl>


