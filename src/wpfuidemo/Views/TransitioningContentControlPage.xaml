<UserControl x:Class="wpfuidemo.Views.TransitioningContentControlPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
             xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Transition Mode: " VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
            <ComboBox x:Name="TransitionModeComboBox" SelectedIndex="0" SelectionChanged="TransitionModeComboBox_SelectionChanged" Width="150">
                <ComboBoxItem Content="Fade"/>
                <ComboBoxItem Content="SlideLeft"/>
                <ComboBoxItem Content="SlideRight"/>
                <ComboBoxItem Content="SlideTop"/>
                <ComboBoxItem Content="SlideBottom"/>
                <ComboBoxItem Content="Zoom"/>
            </ComboBox>
            <controls:AntButton Content="Change Content" Click="Button_Click" Margin="20,0,0,0" Type="Primary"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColor}}" BorderThickness="1" Padding="20" Background="{DynamicResource {x:Static themes:DesignTokenKeys.ComponentBackground}}">
            <controls:TransitioningContentControl x:Name="TransitionControl" 
                                                  TransitionMode="Fade"
                                                  HorizontalContentAlignment="Center"
                                                  VerticalContentAlignment="Center">
                <controls:TransitioningContentControl.Content>
                    <Border Background="{DynamicResource {x:Static themes:DesignTokenKeys.PrimaryColor}}" Width="200" Height="200" CornerRadius="10">
                        <TextBlock Text="Content 1" Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </controls:TransitioningContentControl.Content>
            </controls:TransitioningContentControl>
        </Border>
    </Grid>
</UserControl>
