<UserControl
    x:Class="wpfuidemo.Views.DynamicListDemoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
    xmlns:converters="clr-namespace:wpfuidemo.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:wpfuidemo.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:ListConfigurationConverter x:Key="ListConfigurationConverter" />
    </UserControl.Resources>
    <UserControl.DataContext>
        <vm:DynamicListDemoViewModel />
    </UserControl.DataContext>
    <Grid Margin="20">
        <controls:DynamicEntityList
            Configuration="{Binding ListConfig, Converter={StaticResource ListConfigurationConverter}}"
            CreateCommand="{Binding CreateCommand}"
            ItemsSource="{Binding Entities}"
            PageSize="{Binding PageSize, Mode=TwoWay}"
            ResetCommand="{Binding ResetCommand}"
            SearchCommand="{Binding SearchCommand}"
            SearchContext="{Binding SearchValues}"
            TotalCount="{Binding TotalCount}"
            PageIndex="{Binding PageIndex, Mode=TwoWay}">
            <controls:DynamicEntityList.ExtraFilterContent>
                <controls:AntButton
                    Margin="8,0,0,0"
                    Command="{Binding ToggleMockDataCommand}"
                    Content="Toggle Data" />
            </controls:DynamicEntityList.ExtraFilterContent>
        </controls:DynamicEntityList>
    </Grid>
</UserControl>
