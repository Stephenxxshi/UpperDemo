<UserControl x:Class="wpfuidemo.Views.LayoutPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Divider" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <TextBlock Text="Horizontal" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Text above divider"/>
            <ui:AntDivider/>
            <TextBlock Text="Text below divider"/>
            
            <TextBlock Text="With Text" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
            <ui:AntDivider Text="Center Text"/>
            <ui:AntDivider Text="Left Text" TextAlignment="Left"/>
            <ui:AntDivider Text="Right Text" TextAlignment="Right"/>
            
            <TextBlock Text="Vertical" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Link"/>
                <ui:AntDivider Orientation="Vertical"/>
                <TextBlock Text="Link"/>
                <ui:AntDivider Orientation="Vertical"/>
                <TextBlock Text="Link"/>
            </StackPanel>

            <TextBlock Text="Space" FontSize="24" FontWeight="Bold" Margin="0,40,0,20"/>
            <TextBlock Text="Horizontal (Size=8)" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ui:AntSpace>
                <Button Content="Button1"/>
                <Button Content="Button2"/>
                <Button Content="Button3"/>
            </ui:AntSpace>
            
            <TextBlock Text="Horizontal (Size=20)" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
            <ui:AntSpace Size="20">
                <Button Content="Button1"/>
                <Button Content="Button2"/>
                <Button Content="Button3"/>
            </ui:AntSpace>
            
            <TextBlock Text="Vertical" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
            <ui:AntSpace Direction="Vertical">
                <Button Content="Button1"/>
                <Button Content="Button2"/>
                <Button Content="Button3"/>
            </ui:AntSpace>

            <TextBlock Text="Splitter" FontSize="24" FontWeight="Bold" Margin="0,40,0,20"/>
            <Border Height="100" BorderBrush="Gray" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Left" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <ui:AntSplitter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
                    <TextBlock Grid.Column="2" Text="Right" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
