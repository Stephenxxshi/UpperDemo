<UserControl x:Class="wpfuidemo.Views.SwitchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI">
    <StackPanel Margin="20">
        <TextBlock Text="Switch" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <TextBlock Text="Basic" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <ui:AntSwitch Margin="0,0,0,20"/>
        
        <TextBlock Text="With Text" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <ui:AntSwitch CheckedContent="开启" UnCheckedContent="关闭" Margin="0,0,0,20"/>
        <ui:AntSwitch CheckedContent="1" UnCheckedContent="0" Margin="0,0,0,20"/>
        
        <TextBlock Text="Text Placement" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <ui:AntSwitch CheckedContent="Left" UnCheckedContent="Left" TextPlacement="Left" Margin="0,0,20,0"/>
            <ui:AntSwitch CheckedContent="Right" UnCheckedContent="Right" TextPlacement="Right" Margin="0,0,20,0"/>
        </StackPanel>

        <TextBlock Text="Loading" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <ui:AntSwitch Loading="True" IsChecked="True" Margin="0,0,0,20"/>
        <ui:AntSwitch Loading="True" IsChecked="False" Margin="0,0,0,20"/>
        
        <TextBlock Text="Disabled" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <ui:AntSwitch IsEnabled="False" IsChecked="True" Margin="0,0,0,20"/>
        <ui:AntSwitch IsEnabled="False" IsChecked="False" Margin="0,0,0,20"/>
    </StackPanel>
</UserControl>
