<UserControl x:Class="wpfuidemo.Views.ColorPickerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI"
             xmlns:ui="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="ColorPicker 颜色选择器" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
            <TextBlock Text="用于选择颜色。" FontSize="14" Margin="0,0,0,20" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>

            <TextBlock Text="Basic Usage" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
            <StackPanel Margin="0,0,0,20" Orientation="Horizontal">
                <ui:AntColorPicker Margin="0,0,20,0"/>
                <TextBlock Text="Default ColorPicker" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
            </StackPanel>

            <TextBlock Text="With Binding" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
            <StackPanel Margin="0,0,0,20" Orientation="Horizontal">
                <ui:AntColorPicker x:Name="BindingPicker" SelectedColor="Red" Margin="0,0,20,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Selected Color:" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
                    <TextBlock Text="{Binding ElementName=BindingPicker, Path=SelectedColor}" FontWeight="Bold" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
                    <Border Width="50" Height="20" Margin="0,5,0,0" Background="{Binding ElementName=BindingPicker, Path=SelectedColor, Converter={x:Static themes:ColorToBrushConverter.Instance}}" BorderThickness="1" BorderBrush="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColor}}"/>
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
