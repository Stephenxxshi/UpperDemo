<UserControl x:Class="wpfuidemo.Views.DataGridPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
             xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="AntDataGrid" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Grid.ColumnSpan="2"/>
        
        <ui:AntDataGrid Grid.Row="1" Grid.Column="0" x:Name="MainGrid" AutoGenerateColumns="False" Margin="0,0,20,0">
            <ui:AntDataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" ui:AntDataGrid.ColumnGroup="User Info"/>
                <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="100" ui:AntDataGrid.ColumnGroup="User Info"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="2*" ui:AntDataGrid.ColumnGroup="Location Info"/>
            </ui:AntDataGrid.Columns>
        </ui:AntDataGrid>

        <!-- Settings Panel -->
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColor}}" BorderThickness="1" Padding="15" CornerRadius="4" Background="{DynamicResource {x:Static themes:DesignTokenKeys.ComponentBackground}}">
            <StackPanel>
                <TextBlock Text="Configuration" FontWeight="Bold" Margin="0,0,0,15" FontSize="16"/>

                <!-- Size -->
                <TextBlock Text="Size" Margin="0,0,0,5" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>
                <ComboBox x:Name="SizeCombo" SelectedIndex="1" Margin="0,0,0,15" SelectionChanged="SizeCombo_SelectionChanged">
                    <ComboBoxItem Content="Small"/>
                    <ComboBoxItem Content="Default"/>
                    <ComboBoxItem Content="Large"/>
                </ComboBox>

                <!-- GridLines -->
                <TextBlock Text="GridLines" Margin="0,0,0,5" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>
                <ComboBox x:Name="GridLinesCombo" SelectedIndex="0" Margin="0,0,0,15" SelectionChanged="GridLinesCombo_SelectionChanged">
                    <ComboBoxItem Content="None"/>
                    <ComboBoxItem Content="Horizontal"/>
                    <ComboBoxItem Content="Vertical"/>
                    <ComboBoxItem Content="All"/>
                </ComboBox>

                <!-- Headers -->
                <TextBlock Text="Headers Visibility" Margin="0,0,0,5" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>
                <ComboBox x:Name="HeadersCombo" SelectedIndex="1" Margin="0,0,0,15" SelectionChanged="HeadersCombo_SelectionChanged">
                    <ComboBoxItem Content="All"/>
                    <ComboBoxItem Content="Column"/>
                    <ComboBoxItem Content="Row"/>
                    <ComboBoxItem Content="None"/>
                </ComboBox>

                <!-- Toggles -->
                <CheckBox Content="Show Header Groups" x:Name="HeaderGroupsCheck" Margin="0,0,0,10" Checked="HeaderGroupsCheck_Changed" Unchecked="HeaderGroupsCheck_Changed"/>
                <CheckBox Content="Striped Rows" x:Name="StripedRowsCheck" Margin="0,0,0,10" Checked="StripedRowsCheck_Changed" Unchecked="StripedRowsCheck_Changed"/>
                <CheckBox Content="Is Read Only" x:Name="ReadOnlyCheck" Margin="0,0,0,10" Checked="ReadOnlyCheck_Changed" Unchecked="ReadOnlyCheck_Changed"/>
                <CheckBox Content="Multi-Select" x:Name="MultiSelectCheck" Margin="0,0,0,10" Checked="MultiSelectCheck_Changed" Unchecked="MultiSelectCheck_Changed"/>
                <CheckBox Content="Can User Resize Columns" IsChecked="True" x:Name="ResizeCheck" Margin="0,0,0,10" Checked="ResizeCheck_Changed" Unchecked="ResizeCheck_Changed"/>
                <CheckBox Content="Can User Sort Columns" IsChecked="True" x:Name="SortCheck" Margin="0,0,0,10" Checked="SortCheck_Changed" Unchecked="SortCheck_Changed"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>


