<UserControl x:Class="wpfuidemo.Views.ButtonPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Buttons" 
                   FontSize="{DynamicResource {x:Static themes:DesignTokenKeys.FontSizeLG}}" 
                   Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <TextBlock Text="Type" 
                   FontSize="{DynamicResource {x:Static themes:DesignTokenKeys.FontSize}}" 
                   Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"
                   Margin="0,0,0,10"/>
        
        <WrapPanel Margin="0,0,0,20">
            <Button Content="Primary Button" Style="{DynamicResource AntDesign.Button.Primary}" Margin="0,0,10,10"/>
            <Button Content="Default Button" Style="{DynamicResource AntDesign.Button.Default}" Margin="0,0,10,10"/>
            <Button Content="Dashed Button" Style="{DynamicResource AntDesign.Button.Dashed}" Margin="0,0,10,10"/>
            <Button Content="Text Button" Style="{DynamicResource AntDesign.Button.Text}" Margin="0,0,10,10"/>
            <Button Content="Link Button" Style="{DynamicResource AntDesign.Button.Link}" Margin="0,0,10,10"/>
        </WrapPanel>
    </StackPanel>
</UserControl>
