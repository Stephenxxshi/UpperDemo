<UserControl x:Class="wpfuidemo.Views.ButtonPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI"
             xmlns:ui="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="AntButton" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Grid.ColumnSpan="2"/>

        <!-- Preview Area -->
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="#E8E8E8" BorderThickness="1" CornerRadius="4" Margin="0,0,20,0" Background="White">
            <Grid>
                <ui:AntButton x:Name="DemoButton" 
                              Content="Ant Design Button" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Settings Panel -->
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="#E8E8E8" BorderThickness="1" Padding="15" CornerRadius="4" Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Configuration" FontWeight="Bold" Margin="0,0,0,15" FontSize="16"/>

                    <!-- Type -->
                    <TextBlock Text="Type" Margin="0,0,0,5" Foreground="#666"/>
                    <ComboBox x:Name="TypeCombo" SelectedIndex="1" Margin="0,0,0,15" SelectionChanged="TypeCombo_SelectionChanged">
                        <ComboBoxItem Content="Default"/>
                        <ComboBoxItem Content="Primary"/>
                        <ComboBoxItem Content="Dashed"/>
                        <ComboBoxItem Content="Text"/>
                        <ComboBoxItem Content="Link"/>
                    </ComboBox>

                    <!-- Shape -->
                    <TextBlock Text="Shape" Margin="0,0,0,5" Foreground="#666"/>
                    <ComboBox x:Name="ShapeCombo" SelectedIndex="0" Margin="0,0,0,15" SelectionChanged="ShapeCombo_SelectionChanged">
                        <ComboBoxItem Content="Default"/>
                        <ComboBoxItem Content="Circle"/>
                        <ComboBoxItem Content="Round"/>
                    </ComboBox>

                    <!-- Size -->
                    <TextBlock Text="Size" Margin="0,0,0,5" Foreground="#666"/>
                    <ComboBox x:Name="SizeCombo" SelectedIndex="1" Margin="0,0,0,15" SelectionChanged="SizeCombo_SelectionChanged">
                        <ComboBoxItem Content="Small"/>
                        <ComboBoxItem Content="Default"/>
                        <ComboBoxItem Content="Large"/>
                    </ComboBox>

                    <!-- Toggles -->
                    <CheckBox Content="Loading" x:Name="LoadingCheck" Margin="0,0,0,10" Checked="LoadingCheck_Changed" Unchecked="LoadingCheck_Changed"/>
                    <CheckBox Content="Danger" x:Name="DangerCheck" Margin="0,0,0,10" Checked="DangerCheck_Changed" Unchecked="DangerCheck_Changed"/>
                    <CheckBox Content="Ghost" x:Name="GhostCheck" Margin="0,0,0,10" Checked="GhostCheck_Changed" Unchecked="GhostCheck_Changed"/>
                    <CheckBox Content="Disabled" x:Name="DisabledCheck" Margin="0,0,0,10" Checked="DisabledCheck_Changed" Unchecked="DisabledCheck_Changed"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
