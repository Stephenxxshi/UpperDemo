<UserControl x:Class="wpfuidemo.Views.EmptyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI"
             xmlns:ui="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Empty 空状态" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
            <TextBlock Text="空状态时的展示占位图。" FontSize="14" Margin="0,0,0,20" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextSecondary}}"/>

            <TextBlock Text="Basic Usage" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
            <Border BorderBrush="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColorSplit}}" BorderThickness="1" Padding="20" Margin="0,0,0,20">
                <ui:AntEmpty/>
            </Border>

            <TextBlock Text="Customize Description" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
            <Border BorderBrush="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColorSplit}}" BorderThickness="1" Padding="20" Margin="0,0,0,20">
                <ui:AntEmpty Description="No Data Found"/>
            </Border>

            <TextBlock Text="With Footer" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
            <Border BorderBrush="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColorSplit}}" BorderThickness="1" Padding="20" Margin="0,0,0,20">
                <ui:AntEmpty>
                    <ui:AntButton Type="Primary" Content="Create Now"/>
                </ui:AntEmpty>
            </Border>

            <TextBlock Text="No Description" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static themes:DesignTokenKeys.TextPrimary}}"/>
            <Border BorderBrush="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColorSplit}}" BorderThickness="1" Padding="20" Margin="0,0,0,20">
                <ui:AntEmpty Description="{x:Null}"/>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
