<UserControl x:Class="wpfuidemo.Views.PaginationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI"
             xmlns:ui="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="AntPagination" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Basic" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ui:AntPagination Total="50" Current="1" Margin="0,0,0,20"/>

            <TextBlock Text="More Pages" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ui:AntPagination Total="500" Current="1" Margin="0,0,0,20"/>

            <TextBlock Text="Change Page Size (Not Implemented yet, just showing property)" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ui:AntPagination Total="500" Current="1" PageSize="20" Margin="0,0,0,20"/>

            <TextBlock Text="Quick Jumper" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ui:AntPagination Total="500" Current="1" ShowQuickJumper="True" Margin="0,0,0,20"/>

            <TextBlock Text="Real Data Example" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid x:Name="DemoGrid" AutoGenerateColumns="False" Height="300" Margin="0,0,0,10"
                      BorderThickness="1" BorderBrush="{DynamicResource {x:Static themes:DesignTokenKeys.BorderColor}}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
            
            <ui:AntPagination x:Name="DataPagination"
                              Total="{Binding TotalItems}"
                              Current="{Binding CurrentPage, Mode=TwoWay}"
                              PageSize="{Binding PageSize, Mode=TwoWay}"
                              ShowSizeChanger="True"
                              ShowQuickJumper="True"
                              PageChanged="DataPagination_PageChanged"/>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
