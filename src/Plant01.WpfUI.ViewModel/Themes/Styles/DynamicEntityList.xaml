<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Plant01.WpfUI.ViewModel.Controls"
    xmlns:ui="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
    xmlns:themes="clr-namespace:Plant01.WpfUI.Themes;assembly=Plant01.WpfUI">

    <Style TargetType="{x:Type controls:DynamicEntityList}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DynamicEntityList}">
                    <ControlTemplate.Resources>
                        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
                    </ControlTemplate.Resources>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <!--  Search & Toolbar  -->
                            <RowDefinition Height="*" />
                            <!--  Content  -->
                            <RowDefinition Height="Auto" />
                            <!--  Pagination  -->
                        </Grid.RowDefinitions>

                        <!--  Search & Toolbar  -->
                        <Border
                            Grid.Row="0"
                            Margin="0,0,0,16"
                            Padding="16"
                            Background="{DynamicResource {x:Static themes:DesignTokenKeys.ComponentBackground}}"
                            CornerRadius="{DynamicResource {x:Static themes:DesignTokenKeys.BorderRadius}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Search Fields Panel  -->
                                <WrapPanel
                                    x:Name="PART_SearchPanel"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal" />

                                <!--  Action Buttons  -->
                                <StackPanel
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <ui:AntButton
                                        Margin="8,0,0,0"
                                        HorizontalContentAlignment="Center"
                                        Command="{TemplateBinding SearchCommand}"
                                        Content="查询"
                                        Type="Primary" />
                                    <ui:AntButton
                                        Margin="8,0,0,0"
                                        HorizontalContentAlignment="Center"
                                        Command="{TemplateBinding ResetCommand}"
                                        Content="重置" />

                                    <ContentPresenter Margin="8,0,0,0" Content="{TemplateBinding ExtraFilterContent}" />

                                    <ui:AntButton
                                        Margin="16,0,0,0"
                                        Command="{TemplateBinding CreateCommand}"
                                        Content="新建"
                                        Visibility="{TemplateBinding ShowCreateButton,
                                                                     Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!--  Content Area  -->
                        <Grid Grid.Row="1">
                            <ui:AntDataGrid
                                x:Name="PART_DataGrid"
                                AutoGenerateColumns="False"
                                IsReadOnly="True"
                                ItemsSource="{TemplateBinding ItemsSource}" />

                            <ui:AntEmpty
                                x:Name="PART_EmptyState"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="Collapsed" />
                        </Grid>

                        <!--  Pagination  -->
                        <ui:AntPagination
                            x:Name="PART_Pagination"
                            Grid.Row="2"
                            Margin="0,16,0,0"
                            HorizontalAlignment="Center"
                            Current="{Binding PageIndex, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                            PageSize="{Binding PageSize, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                            ShowSizeChanger="True"
                            Total="{Binding TotalCount, RelativeSource={RelativeSource TemplatedParent}}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
