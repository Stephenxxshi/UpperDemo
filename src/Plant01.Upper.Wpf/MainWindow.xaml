<Window x:Class="Plant01.Upper.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Plant01.Upper.Wpf"
        xmlns:vm ="clr-namespace:Plant01.Upper.Presentation.Core.ViewModels;assembly=Plant01.Upper.Presentation.Core"
        xmlns:controls="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:ShellViewModel, IsDesignTimeCreatable=True}"
        Title="{Binding Title}" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/NavigateDataTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <vm:ShellViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <!--  LOGO  -->
        <Grid Grid.Row="0" Grid.Column="0">
            <Border Background="{StaticResource BackGround}" Style="{StaticResource SidebarBorder}">
                <Image Width="80"
               Height="20"
               Source="/Assets/Images/Copyright.png"
               Style="{StaticResource ProductLogo}" />
            </Border>
        </Grid>

        <!--  时间  -->
        <Grid Grid.Row="0" Grid.Column="1" Background="{StaticResource BackGround}">
            <Image Margin="0,0,100,0" HorizontalAlignment="Right" Source="/Assets/Images/TitleBackgournd.png" />
            <Border Grid.Row="0"
            Grid.Column="1"
            VerticalAlignment="Center"
            Panel.ZIndex="10"
            Background="Transparent"
            Style="{StaticResource NavbarBorder}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseMove">
                        <i:InvokeCommandAction Command="{Binding Path=OnDragCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Grid>
                    <TextBlock Margin="10,0,0,0" Style="{StaticResource Clock}" Text="{Binding Path=CurrentTime, StringFormat={}{0:yyyy-MM-dd HH:mm:ss dddd}, ConverterCulture=zh-CN}" />
                    <Button Command="{Binding Path=OnClosedCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Foreground="Red"
                    IsTabStop="False"
                    Style="{StaticResource WindowClose}" />
                </Grid>
            </Border>
        </Grid>

        <!--  侧边导航栏  -->
        <Grid Grid.Row="1" Grid.Column="0" Panel.ZIndex="10">
            <ItemsControl ItemsSource="{Binding MenuItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:IconRadioButton GroupName="NavGroup"
                                            Content="{Binding Title}" 
                                            Icon="{Binding IconChar}"
                                            IconPlacement="{Binding IconPlacement}"
                                            IconFontFamily="/Assets/Fonts/#iconfont"
                                            IconSize="20"
                                            Command="{Binding DataContext.NavigateToCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding}" 
                                            Margin="5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <!--  主内容  -->
        <Grid Grid.Row="1" Grid.RowSpan="2" Grid.Column="1">
            <ContentControl Content="{Binding CurrentView}" Margin="10,10,10,10" IsTabStop="False" />
        </Grid>

        <!--  版本号  -->
        <Grid Grid.Row="2" Grid.Column="0" Background="{StaticResource BackGround}">
            <TextBlock HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Foreground="White"
               Text="25110801" />
        </Grid>
    </Grid>
</Window>
