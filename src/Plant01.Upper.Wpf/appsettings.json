{
  "LoggingProvider": "Serilog", // Options: "Default", "Serilog", "NLog"
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "MesApi": {
    "BaseUrl": "http://rtmes.joinye.com:8002/api",
    "CorpNo": "020",
    "CorpId": "IezQB0Esc1mN4Tf7Xw83U3tv7eEy33PJ",
    "Timeout": "00:01:00",
    "RetryCount": 3
  },
  "MesWorkOrder": {
    "BaseUrl": "http://localhost:5000",
    "Username": "admin",
    "Password": "123456"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/serilog-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Properties": {
      "Application": "Plant01.Upper"
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "logs/nlog-${shortdate}.log",
        "layout": "${longdate}|${level:uppercase=true}|${logger}|${message}|${exception:format=tostring}"
      },
      "console": {
        "type": "Console"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile,console"
      }
    ]
  }
}
