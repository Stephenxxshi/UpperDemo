<UserControl
    x:Class="Plant01.Upper.Wpf.Views.MesInterfaceDebugView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Plant01.Upper.Presentation.Core.ViewModels;assembly=Plant01.Upper.Presentation.Core"
    xmlns:converters="clr-namespace:Plant01.Upper.Wpf.Converters"
    d:DataContext="{d:DesignInstance vm:MesInterfaceDebugViewModel}"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Revopac Interface Test (IMesService)">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="Bold"
                        Text="Authentication Key" />
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Corp No:" />
                        <TextBox
                            Grid.Column="1"
                            Margin="5,0,10,0"
                            Text="{Binding CorpNo}" />
                        <TextBlock
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Text="Corp ID:" />
                        <TextBox
                            Grid.Column="3"
                            Margin="5,0,0,0"
                            Text="{Binding CorpId}" />
                    </Grid>
                    <Button
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        Command="{Binding GenerateRevopacAuthKeyCommand}"
                        Content="Generate Auth Key" />
                    <TextBlock
                        Margin="0,0,0,10"
                        Text="{Binding RevopacAuthKey, StringFormat='Current Key: {0}'}"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="Bold"
                        Text="Parameters" />
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="AGV Device Code:" />
                        <TextBox
                            Grid.Column="1"
                            Margin="5,0,10,0"
                            Text="{Binding AgvDeviceCode}" />
                        <TextBlock
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Text="Pallet ID:" />
                        <TextBox
                            Grid.Column="3"
                            Margin="5,0,0,0"
                            Text="{Binding PalletId}" />
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Device Code:" />
                        <TextBox
                            Grid.Column="1"
                            Margin="5,0,10,0"
                            Text="{Binding DeviceCode}" />
                        <TextBlock
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Text="Job ID:" />
                        <TextBox
                            Grid.Column="3"
                            Margin="5,0,0,0"
                            Text="{Binding JobId}" />
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Pallet Type:" />
                        <TextBox
                            Grid.Column="1"
                            Margin="5,0,10,0"
                            Text="{Binding PalletType}" />
                        <TextBlock
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Text="Bag Num 1:" />
                        <TextBox
                            Grid.Column="3"
                            Margin="5,0,0,0"
                            Text="{Binding BagNum1}" />
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Quantity 1:" />
                        <TextBox
                            Grid.Column="1"
                            Margin="5,0,10,0"
                            Text="{Binding Quantity1}" />
                        <TextBlock
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Text="Bag Num 2:" />
                        <TextBox
                            Grid.Column="3"
                            Margin="5,0,0,0"
                            Text="{Binding BagNum2}" />
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Quantity 2:" />
                        <TextBox
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            Text="{Binding Quantity2}" />
                    </Grid>

                    <WrapPanel Orientation="Horizontal">
                        <Button
                            Margin="0,0,10,5"
                            Command="{Binding FinishPalletizingCommand}"
                            Content="Finish Palletizing" />
                        <Button
                            Margin="0,0,10,5"
                            Command="{Binding ReportLackPalletCommand}"
                            Content="Report Lack Pallet" />
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Direct WebAPI Test (IMesWebApi)">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="Bold"
                        Text="API Configuration" />
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Base URL:" />
                        <TextBox
                            Grid.Column="1"
                            Margin="5,0,10,0"
                            Text="{Binding BaseUrl}" />
                        <StackPanel
                            Grid.Column="2"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal">
                            <Button
                                Margin="10,0,5,0"
                                Command="{Binding StartServerCommand}"
                                Content="Start Server"
                                IsEnabled="{Binding IsServerRunning, Converter={StaticResource InverseBooleanConverter}}" />
                            <Button
                                Margin="0,0,0,0"
                                Command="{Binding StopServerCommand}"
                                Content="Stop Server"
                                IsEnabled="{Binding IsServerRunning}" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Username:" />
                        <TextBox
                            Grid.Column="1"
                            Margin="5,0,10,0"
                            Text="{Binding Username}" />
                        <TextBlock
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Text="Password:" />
                        <TextBox
                            Grid.Column="3"
                            Margin="5,0,0,0"
                            Text="{Binding Password}" />
                    </Grid>

                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="Bold"
                        Text="Work Order Push Simulation" />
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Work Order Code:" />
                        <TextBox
                            Grid.Column="1"
                            Margin="5,0,10,0"
                            Text="{Binding WorkOrderCode}" />
                        <TextBlock
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Text="Product Code:" />
                        <TextBox
                            Grid.Column="3"
                            Margin="5,0,0,0"
                            Text="{Binding ProductCode}" />
                    </Grid>

                    <Button
                        Margin="0,0,10,5"
                        HorizontalAlignment="Left"
                        Command="{Binding SimulatePushCommand}"
                        Content="Simulate Push (Client -> Localhost)" />

                </StackPanel>
            </GroupBox>

            <GroupBox Padding="10" Header="Debug Logs">
                <StackPanel>
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="Operation Logs" />
                        <Button
                            Grid.Column="1"
                            Command="{Binding ClearLogsCommand}"
                            Content="Clear Logs" />
                    </Grid>
                    <TextBox
                        Height="200"
                        VerticalScrollBarVisibility="Auto"
                        AcceptsReturn="True"
                        IsReadOnly="True"
                        Text="{Binding Logs}" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
