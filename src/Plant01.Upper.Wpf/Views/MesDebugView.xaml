<UserControl
    x:Class="Plant01.Upper.Wpf.Views.MesDebugView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Plant01.Upper.Presentation.Core.ViewModels;assembly=Plant01.Upper.Presentation.Core"
    xmlns:wpfui="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
    xmlns:converters="clr-namespace:Plant01.Upper.Wpf.Converters"
    d:DataContext="{d:DesignInstance vm:MesDebugViewModel}"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:IntToStringConverter x:Key="IntToStringConverter" />
    </UserControl.Resources>
    <wpfui:TransitioningContentControl RunTransitionOnLoaded="True">

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,10"
                FontSize="20"
                FontWeight="Bold"
                Text="MES Interface Debug Tool" />

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <GroupBox
                        Margin="0,0,0,10"
                        Padding="10"
                        Header="Revopac Interface Test (IMesService)">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="Bold"
                                Text="Authentication Key" />
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    Text="CorpNo:" />
                                <wpfui:AntInput
                                    Grid.Column="1"
                                    Margin="0,0,10,0"
                                    Text="{Binding CorpNo, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Column="2"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    Text="CorpId:" />
                                <wpfui:AntInput
                                    Grid.Column="3"
                                    Margin="0,0,10,0"
                                    Text="{Binding CorpId, UpdateSourceTrigger=PropertyChanged}" />

                                <wpfui:AntButton
                                    Grid.Column="4"
                                    Padding="12,6"
                                    Command="{Binding GenerateRevopacAuthKeyCommand}"
                                    Content="Generate Key" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    Text="Auth Key:" />
                                <wpfui:AntInput
                                    Grid.Column="1"
                                    Background="#F5F5F5"
                                    FontFamily="Consolas"
                                    FontSize="11"
                                    IsReadOnly="True"
                                    Text="{Binding RevopacAuthKey}" />
                            </Grid>

                            <TextBlock
                                Margin="0,5,0,5"
                                FontWeight="Bold"
                                Text="Common Parameters" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="AGV Device:" />
                                <wpfui:AntInput
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,0,10,5"
                                    Text="{Binding AgvDeviceCode, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Pallet ID:" />
                                <wpfui:AntInput
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    Margin="0,0,0,5"
                                    Text="{Binding PalletId, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Device Code:" />
                                <wpfui:AntInput
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,0,10,5"
                                    Text="{Binding DeviceCode, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Job ID:" />
                                <wpfui:AntInput
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    Margin="0,0,0,5"
                                    Text="{Binding JobId, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IntToStringConverter}}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Pallet Type:" />
                                <wpfui:AntInput
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="0,0,10,5"
                                    Text="{Binding PalletType, UpdateSourceTrigger=PropertyChanged}" />


                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Margin="0,0,0,5"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="Gray"
                                    Text="(1=Parent 2=Child)" />
                            </Grid>

                            <TextBlock
                                Margin="0,5,0,5"
                                FontWeight="Bold"
                                Text="Package Details" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Bag Number 1:" />
                                <wpfui:AntInput
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,0,10,5"
                                    Text="{Binding BagNum1, UpdateSourceTrigger=PropertyChanged}" />


                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Quantity 1:" />
                                <wpfui:AntInput
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    Margin="0,0,0,5"
                                    Text="{Binding Quantity1, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Bag Number 2:" />
                                <wpfui:AntInput
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,0,10,5"
                                    Text="{Binding BagNum2, UpdateSourceTrigger=PropertyChanged}" />


                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Quantity 2:" />
                                <wpfui:AntInput
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    Margin="0,0,0,5"
                                    Text="{Binding Quantity2, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>

                            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                <wpfui:AntButton
                                    Margin="0,0,8,0"
                                    Padding="15,6"
                                    Command="{Binding FinishPalletizingCommand}"
                                    Content="Test Finish Palletizing" />
                                <wpfui:AntButton
                                    Padding="15,6"
                                    Command="{Binding ReportLackPalletCommand}"
                                    Content="Test Lack Pallet" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox
                        Margin="0,0,0,10"
                        Padding="10"
                        Header="Work Order Interface Test (IMesWebApi)">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="Bold"
                                Text="Server Control" />
                            <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                <wpfui:AntButton
                                    Margin="0,0,8,0"
                                    Padding="12,6"
                                    Command="{Binding StartServerCommand}"
                                    Content="Start Server" />
                                <wpfui:AntButton
                                    Padding="12,6"
                                    Command="{Binding StopServerCommand}"
                                    Content="Stop Server" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding IsServerRunning, StringFormat='Running: {0}'}" />
                            </StackPanel>

                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="Bold"
                                Text="Basic Authentication" />
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    Text="Username:" />
                                <wpfui:AntInput
                                    Grid.Column="1"
                                    Margin="0,0,10,0"
                                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />


                                <TextBlock
                                    Grid.Column="2"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    Text="Password:" />
                                <wpfui:AntInput
                                    Grid.Column="3"
                                    Margin="0,0,10,0"
                                    Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />


                                <wpfui:AntButton
                                    Grid.Column="4"
                                    Padding="12,6"
                                    Command="{Binding SetBasicAuthCommand}"
                                    Content="Set Auth" />
                            </Grid>

                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="Bold"
                                Text="Work Order Parameters" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Work Order:" />
                                <wpfui:AntInput
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,0,10,5"
                                    Text="{Binding WorkOrderCode, UpdateSourceTrigger=PropertyChanged}" />


                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Order Date:" />
                                <wpfui:AntDatePicker
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    Margin="0,0,0,5"
                                    SelectedDate="{Binding OrderDate, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Line Number:" />
                                <wpfui:AntInput
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,0,10,5"
                                    Text="{Binding LineNo, UpdateSourceTrigger=PropertyChanged}" />


                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Product Code:" />
                                <wpfui:AntInput
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    Margin="0,0,0,5"
                                    Text="{Binding ProductCode, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Product Name:" />
                                <wpfui:AntInput
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="0,0,10,5"
                                    Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}" />


                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Product Spec:" />
                                <wpfui:AntInput
                                    Grid.Row="2"
                                    Grid.Column="3"
                                    Margin="0,0,0,5"
                                    Text="{Binding ProductSpec, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Quantity:" />
                                <wpfui:AntInput
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="0,0,10,5"
                                    Text="{Binding WorkOrderQuantity, UpdateSourceTrigger=PropertyChanged}" />


                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="2"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Unit:" />
                                <wpfui:AntInput
                                    Grid.Row="3"
                                    Grid.Column="3"
                                    Margin="0,0,0,5"
                                    Text="{Binding Unit, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Batch Number:" />
                                <wpfui:AntInput
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Margin="0,0,10,5"
                                    Text="{Binding BatchNumber, UpdateSourceTrigger=PropertyChanged}" />


                                <TextBlock
                                    Grid.Row="4"
                                    Grid.Column="2"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Label Template:" />
                                <wpfui:AntInput
                                    Grid.Row="4"
                                    Grid.Column="3"
                                    Margin="0,0,0,5"
                                    Text="{Binding LabelTemplateCode, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    Margin="0,0,8,5"
                                    VerticalAlignment="Center"
                                    Text="Status:" />
                                <wpfui:AntInput
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    Margin="0,0,10,5"
                                    Text="{Binding Status, UpdateSourceTrigger=PropertyChanged}" />


                                <TextBlock
                                    Grid.Row="5"
                                    Grid.Column="2"
                                    Margin="0,0,0,5"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="Gray"
                                    Text="(1=Start 99=Finish)" />
                            </Grid>

                            <wpfui:AntButton
                                Margin="0,5,0,0"
                                Padding="15,6"
                                Command="{Binding SimulatePushCommand}"
                                Content="Simulate Push (Client -&gt; Localhost)" />
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Padding="10" Header="Debug Logs">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="250" />
                            </Grid.RowDefinitions>

                            <wpfui:AntButton
                                Grid.Row="0"
                                Margin="0,0,0,5"
                                Padding="12,5"
                                HorizontalAlignment="Right"
                                Command="{Binding ClearLogsCommand}"
                                Content="Clear Logs" />

                            <Border
                                Grid.Row="1"
                                Background="#F5F5F5"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding Logs}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Margin="3,1"
                                                    FontFamily="Consolas"
                                                    FontSize="11"
                                                    Text="{Binding}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <Border
                Grid.Row="2"
                Margin="0,10,0,0"
                Padding="8"
                Background="#F0F0F0"
                BorderBrush="#DDDDDD"
                BorderThickness="0,1,0,0">
                <TextBlock FontWeight="SemiBold" Text="{Binding StatusMessage}" />
            </Border>
        </Grid>
    </wpfui:TransitioningContentControl>
</UserControl>
