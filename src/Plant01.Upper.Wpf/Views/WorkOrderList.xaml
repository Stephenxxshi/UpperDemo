<UserControl
    x:Class="Plant01.Upper.Wpf.Views.WorkOrderList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
    xmlns:vmcontrols="clr-namespace:Plant01.WpfUI.ViewModel.Controls;assembly=Plant01.WpfUI.ViewModel"
    xmlns:converters="clr-namespace:Plant01.Upper.Wpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Plant01.Upper.Wpf.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Plant01.Upper.Presentation.Core.ViewModels;assembly=Plant01.Upper.Presentation.Core"
    d:DataContext="{d:DesignInstance Type=vm:WorkOrderListViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources />
    <controls:TransitioningContentControl RunTransitionOnLoaded="True">
        <vmcontrols:DynamicEntityList
            Configuration="{Binding ListConfig}"
            CreateCommand="{Binding CreateCommand}"
            ItemsSource="{Binding WorkOrders}"
            PageSize="{Binding PageSize, Mode=TwoWay}"
            ResetCommand="{Binding ResetCommand}"
            SearchCommand="{Binding SearchCommand}"
            SearchContext="{Binding SearchValues}"
            ShowCreateButton="False"
            TotalCount="{Binding TotalCount}"
            PageIndex="{Binding PageIndex, Mode=TwoWay}">
            <!--<controls:DynamicEntityList.ExtraFilterContent>
                <controls:AntButton
                    Margin="8,0,0,0"
                    Command="{Binding RefreshCommand}"
                    Content="刷新" />
            </controls:DynamicEntityList.ExtraFilterContent>-->
        </vmcontrols:DynamicEntityList>
    </controls:TransitioningContentControl>
</UserControl>
