<UserControl
    x:Class="Plant01.Upper.Wpf.Views.DevicePointTableView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Plant01.WpfUI.Controls;assembly=Plant01.WpfUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Plant01.Upper.Wpf.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Plant01.Upper.Presentation.Core.ViewModels;assembly=Plant01.Upper.Presentation.Core"
    d:DataContext="{d:DesignInstance vm:DevicePointTableViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <controls:AntDataGrid
            AutoGenerateColumns="False"
            BorderThickness="0"
            CanUserAddRows="False"
            GridLinesVisibility="Horizontal"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding Tags}">
            <controls:AntDataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    MinWidth="100"
                    Binding="{Binding EquipmentCode}"
                    Header="设备编号" />
                <DataGridTextColumn
                    Width="*"
                    MinWidth="150"
                    Binding="{Binding TagCode}"
                    Header="点位代码" />
                <DataGridTextColumn
                    Width="*"
                    MinWidth="150"
                    Binding="{Binding TagName}"
                    Header="点位名称" />
                <DataGridTextColumn
                    Width="Auto"
                    MinWidth="120"
                    Binding="{Binding Address}"
                    Header="地址/代码" />
                <DataGridTextColumn
                    Width="Auto"
                    MinWidth="80"
                    Binding="{Binding Value}"
                    Header="当前值" />
                <DataGridTextColumn
                    Width="Auto"
                    MinWidth="100"
                    Binding="{Binding Purpose}"
                    Header="用途" />
                <DataGridTextColumn
                    Width="Auto"
                    MinWidth="150"
                    Binding="{Binding UpdateTime, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"
                    Header="更新时间" />

                <!--  写入值列  -->
                <DataGridTemplateColumn Width="120" Header="写入值">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Margin="2" Text="{Binding WriteValue, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--  操作列  -->
                <DataGridTemplateColumn Width="80" Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Margin="2"
                                Command="{Binding DataContext.WriteTagCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Content="写入" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </controls:AntDataGrid.Columns>
        </controls:AntDataGrid>
    </Grid>
</UserControl>
